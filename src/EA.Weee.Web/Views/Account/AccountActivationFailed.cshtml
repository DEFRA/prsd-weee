@using EA.Weee.Web.RazorHelpers
@model EA.Weee.Web.ViewModels.Account.AccountActivationRequestViewModel
@{
    ViewBag.Title = "Account activation request expired";
}

<h2 class="govuk-heading-l">Your request to activate your account has expired</h2>

@using (Html.BeginForm("UserAccountActivationFailed", "Account", new { id = ViewContext.RouteData.Values["id"] }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <p>To request another activation email, enter the email address associated with your account.</p>

    <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Email)">
        @Html.Gds().LabelFor(m => m.Email)
        @Html.Gds().ValidationMessageFor(m => m.Email)
        @Html.Gds().TextBoxFor(m => m.Email, new { autocomplete = "off" })
    </div>

    @(this.WeeeGds().Submit("Continue"))
}