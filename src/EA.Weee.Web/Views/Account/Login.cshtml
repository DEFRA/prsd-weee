@model EA.Weee.Web.ViewModels.Account.LoginViewModel

<div class="grid-row">
    <section class="column-two-thirds">

        <h1 class="heading-large">
            Log in to access your account
        </h1>

        <p>To access your account please enter your information below.</p>

        @using (Html.BeginForm("Login", "Account"))
        {
            @Html.AntiForgeryToken()
            @Html.Gds().ValidationSummary()

            <div class="form-group @Html.Gds().FormGroupClass(m => m.Email)">
                @Html.ValidationMessageFor(m => m.Email)
                @Html.Gds().LabelFor(m => m.Email)
                @Html.Gds().TextBoxFor(m => m.Email)
            </div>
            <div class="form-group @Html.Gds().FormGroupClass(m => m.Password)">
                @Html.ValidationMessageFor(m => m.Password)
                @Html.Gds().LabelFor(m => m.Password)
                @Html.Gds().PasswordFor(m => m.Password)
            </div>
            <div class="form-group">
                @Html.Gds().CheckBoxFor(m => m.RememberMe)
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="button" />
            </div>
            <p>@Html.ActionLink("Reset your password", "Login", "Account")</p>
        }

    </section>
</div>