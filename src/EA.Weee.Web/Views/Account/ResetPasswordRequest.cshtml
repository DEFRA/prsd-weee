@using EA.Weee.Web.RazorHelpers
@model EA.Weee.Web.ViewModels.Account.ResetPasswordRequestViewModel

@section main_content {
    <h1 class="govuk-heading-l">
        Reset your password
    </h1>

    @using (Html.BeginForm(actionName: "ResetPasswordRequest", controllerName: "Account", method: FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        <p>To reset your password, enter the email address associated with your account.</p>

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Email)">
            @Html.Gds().LabelFor(m => m.Email)
            @Html.Gds().ValidationMessageFor(m => m.Email)
            @Html.Gds().TextBoxFor(m => m.Email, new { autocomplete = "off" })
        </div>

        @(this.WeeeGds().Submit("Continue"))
    }

    @Html.Partial("_CompetentAuthoritiesContactDetails", new ViewDataDictionary { { "title", "I don't know the email address for my account" }, { "SubHeading", "If you don't know the email address belonging to your account, contact the relevant helpline:" } })

    <p>
        @Html.ActionLink("Sign in to my account", "SignIn", "Account")
    </p>
}
