@using EA.Weee.Core.DataStandards
@using EA.Weee.Web.RazorHelpers
@model EA.Weee.Web.ViewModels.Account.ResetPasswordModel

@section main_content {
    <h1 class="govuk-heading-l">
        Reset your password
    </h1>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        <div class="form-group @Html.Gds().FormGroupClass(m => m.Password)">
            @Html.Gds().LabelFor(m => m.Password)
            <p class="form-hint">Your password has to be at least 8 characters long and must contain at least 1 lower-case letter, 1 upper-case letter and 1 number.</p>
            @Html.Gds().ValidationMessageFor(m => m.Password)
            @Html.Gds().PasswordFor(m => m.Password, new { autocomplete = "off", maxlength=CommonMaxFieldLengths.Password })
        </div>
        <div class="form-group @Html.Gds().FormGroupClass(m => m.ConfirmPassword)">
            @Html.Gds().LabelFor(m => m.ConfirmPassword)
            @Html.Gds().ValidationMessageFor(m => m.ConfirmPassword)
            @Html.Gds().PasswordFor(m => m.ConfirmPassword, new { autocomplete = "off", maxlength = CommonMaxFieldLengths.Password })
        </div>

        @(this.WeeeGds().Submit("Continue", new { @class = "button" }))

        <p>
            @Html.ActionLink("Sign in to your account", "SignIn", "Account")
        </p>
    }
}
