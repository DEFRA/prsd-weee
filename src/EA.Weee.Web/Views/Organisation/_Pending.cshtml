@using System.Collections.Generic
@using EA.Weee.Core.Organisations
@model IEnumerable<OrganisationUserData>

@if (Model.Any())
{
<div class="related-section">
    <h2 class="related-section-title">
        Organisations you have applied to perform activities for:
    </h2>
    <div class="form-group">
        <table>
            <thead>
                <tr>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (OrganisationUserData item in Model)
                {
                    <tr>
                        @if (item.Organisation.OrganisationType == OrganisationType.RegisteredCompany)
                        {
                            <td>
                                <span>@item.Organisation.Name</span><br/>
                                <span style="color:#6F777B;">- @item.UserStatus</span>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span>@item.Organisation.TradingName</span><br />
                                <span style="color:#6F777B;">- @item.UserStatus</span>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}