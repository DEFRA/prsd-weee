@model EA.Weee.Web.ViewModels.Home.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<div class="grid-row">
    <section class="column-two-thirds">
        <header class="hgroup">
            <h1 class="heading-large">Apply for an international waste shipments notification number</h1>
        </header>

        <div>
            <p>You must apply for an international waste shipments (IWS) notification number if you ship waste overseas as part of your business.</p>
        </div>

        <div>
            <p>Use this service to:</p>
            <ul class="list-bullet">
                <li>Apply for an International Waste Shipment Notification Number.</li>
                <li>Download the International Waste Shipment Notification application form and supporting documents.</li>
            </ul>
        </div>

        <p id="get-started" class="get-started group">
            @Html.ActionLink("Start now", "LandingPage", "Home", null, new { @class = "button-get-started button" })
        </p>

        <div>
            <p>
                <h2 class="heading-medium">Before you start</h2>
            </p>
            <p>
                It takes around 5 minutes to apply.
            </p>
            <p>You will need:</p>
            <ul class="list-bullet">
                <li>Your company registration number (if applicable).</li>
                <li>The full address for your principle place of business.</li>
            </ul>

        </div>

    </section>

</div>