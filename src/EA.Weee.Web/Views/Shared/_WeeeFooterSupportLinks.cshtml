@using EA.Weee.Web.Controllers
@using EA.Weee.Web.RazorHelpers
@using MvcNavigationHelpers

@{
    object token;
    var action = "Accessibility";
    if (ViewContext.RouteData.DataTokens.TryGetValue("area", out token))
    {
        var areaName = token.ToString();
        if (areaName.ToLower().Equals("admin"))
        {
            action = "AccessibilityInternal";
        }
    }
}

<ul class="govuk-footer__inline-list">
    @* Show terms and conditions and privacy policy only on external site *@
    @if ((HttpContext.Current.Session["ShowFooterAndLinks"] == null) || ((bool)HttpContext.Current.Session["ShowFooterAndLinks"] == false))
    {
        <li class="govuk-footer__inline-list-item">
            <a href="~/new-user/terms-and-conditions" class="govuk-footer__link" onclick="ga('send', 'event', 'Policies', 'Terms and conditions');">Terms and conditions</a>
        </li>
        <li class="govuk-footer__inline-list-item">
            <a href="~/new-user/privacy" class="govuk-footer__link" onclick="ga('send', 'event', 'Policies', 'Privacy');">Privacy</a>
        </li>
    }
    <li class="govuk-footer__inline-list-item">
        <a href="~/NewUser/Cookies" class="govuk-footer__link">Cookies</a>
    </li>
    
    <li class="govuk-footer__inline-list-item">
        @Html.ActionLink("Accessibility statement", @action, "NewUser", new { area = string.Empty }, new {@class="govuk-footer__link" })
    </li>

</ul>