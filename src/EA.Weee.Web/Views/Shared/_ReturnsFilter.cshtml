@using EA.Weee.Web.Infrastructure
@using EA.Weee.Web.RazorHelpers
@model EA.Weee.Web.ViewModels.Returns.ReturnsViewModel

@{
    var form = ViewData["form"] as string;
}

@using (Html.BeginRouteForm(form, FormMethod.Get, new {id = "ReturnsQueryParameterForm"}))
{

        <fieldset class="govuk-fieldset">
            <legend class="govuk-visually-hidden">
                    select compliance year and quarter
            </legend>
            <div class="govuk-grid-row">

                <div class="govuk-form-group govuk-grid-column-one-half @Html.Gds().FormGroupClass(m => m.SelectedComplianceYear)">
                    <div class="font-bold govuk-body govuk-!-display-inline govuk-!-font-weight-bold">@Html.LabelFor(m => m.SelectedComplianceYear, new { @for="ReturnsExternalSelectedComplianceYear" }):&nbsp;&nbsp;</div>
                    @Html.Gds().ValidationMessageFor(m => m.SelectedComplianceYear)
                    <div class="govuk-!-width-full govuk-!-display-inline">
                        @Html.Gds().DropDownListFor(m => m.SelectedComplianceYear, new SelectList(Model.ComplianceYearList), new {id = "ReturnsExternalSelectedComplianceYear"})
                    </div>
                </div>

                <div class="govuk-form-group govuk-grid-column-one-half @Html.Gds().FormGroupClass(m => m.SelectedQuarter)">
                    <div class="font-bold govuk-body govuk-!-display-inline govuk-!-font-weight-bold">@Html.LabelFor(m => m.SelectedQuarter, new { @for = "ReturnsExternalSelectedQuarter" }):</div>
                        @Html.Gds().ValidationMessageFor(m => m.SelectedQuarter)
                        <div class="govuk-!-width-full govuk-!-display-inline">
                            @Html.Gds().DropDownListFor(m => m.SelectedQuarter, new SelectList(Model.QuarterList), new { id = "ReturnsExternalSelectedQuarter" })
                        </div>
                </div>
                <noscript>
                    <button class="govuk-button" type="submit">Filter</button>
                </noscript>
                <div class="govuk-!-padding-bottom-5"></div>
            </div>
            
        </fieldset>

}