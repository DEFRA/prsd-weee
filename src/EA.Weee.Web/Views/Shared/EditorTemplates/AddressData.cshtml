@using EA.Weee.Core.DataStandards
@model EA.Weee.Core.Shared.AddressData

@Html.HiddenFor(m => m.RowVersion)

<div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Address1)">
    @Html.Gds().LabelFor(m => m.Address1)
    @Html.Gds().ValidationMessageFor(m => m.Address1)
    @Html.Gds().TextBoxFor(m => m.Address1, new { @class = "govuk-!-width-one-half", @maxlength = CommonMaxFieldLengths.AddressLine })
</div>

