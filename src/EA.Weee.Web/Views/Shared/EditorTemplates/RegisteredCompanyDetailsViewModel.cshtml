@using EA.Weee.Core.DataStandards
@model EA.Weee.Core.Organisations.RegisteredCompanyDetailsViewModel
    

<div class="govuk-form-group @Html.Gds().FormGroupClassWithNested(m => m.CompanyName)">
    @Html.Gds().LabelFor(m => m.CompanyName)
    @Html.Gds().ValidationMessageFor(m => m.CompanyName)
    @Html.Gds().TextBoxFor(m => m.CompanyName, new { @maxlength = CommonMaxFieldLengths.DefaultString })
</div>

<div class="govuk-form-group @Html.Gds().FormGroupClassWithNested(m => m.BusinessTradingName)">
    @Html.Gds().LabelFor(m => m.BusinessTradingName)
    @Html.Gds().TextBoxFor(m => m.BusinessTradingName, new { @maxlength = CommonMaxFieldLengths.DefaultString })
</div>