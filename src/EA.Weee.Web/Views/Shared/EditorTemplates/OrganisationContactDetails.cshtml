@using EA.Weee.Core.Organisations
@using EA.Weee.Web.RazorHelpers
@model EA.Weee.Core.Organisations.OrganisationData

@if (@Model.OrganisationType == OrganisationType.SoleTraderOrIndividual)
{
    @Html.WeeeGds().DataTable("Organisation details", new Dictionary<string, object>
            {
                { "Organisation type", "Sole trader or individual" },
                { "Business trading name", @Model.TradingName }
            })
}
else if (Model.OrganisationData.OrganisationType == OrganisationType.Partnership)
{
    @Html.WeeeGds().DataTable("Organisation details", new Dictionary<string, object>
            {
                { "Organisation type", "Partnership" },
                { "Business trading name", @Model.TradingName }
            })
}
else
{
    @Html.WeeeGds().DataTable("Organisation details", new Dictionary<string, object>
            {
                { "Organisation type", "Registered company" },
                { "Company name", @Model.Name },
                { "Company number", @Model.CompanyRegistrationNumber },
                { "Business trading name", @Model.TradingName }
            })
}

@if (Model.OrganisationType == OrganisationType.Partnership || Model.OrganisationType == OrganisationType.SoleTraderOrIndividual)
{
    <h2 class="heading-medium">Principal place of business details</h2>
}
else if (Model.OrganisationType == OrganisationType.RegisteredCompany)
{
    <h2 class="heading-medium">Registered office details</h2>
}

@Html.WeeeGds().DataTable("Principal place of business details", new Dictionary<string, object>
        {
            { "Address line 1", @Model.BusinessAddress.Address1 },
            { "Address line 2", @Model.BusinessAddress.Address2 },
            { "Town or city", @Model.BusinessAddress.TownOrCity },
            { "County or region", @Model.BusinessAddress.CountyOrRegion },
            { "Postcode", @Model.BusinessAddress.Postcode },
            { "Country", @Model.BusinessAddress.CountryName },
            { "Telephone number", @Model.BusinessAddress.Telephone },
            { "Email address", @Model.BusinessAddress.Email },
        })

