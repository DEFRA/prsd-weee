@using EA.Weee.Web.Controllers
@using EA.Weee.Web.RazorHelpers
@using MvcNavigationHelpers
@{
    Layout = "~/Views/Shared/_Layout.GovUK.cshtml";
    ViewBag.HeaderClass = "with-proposition";
}

@* Implement sections here *@
@section head {
    @Html.Partial("_WeeeHead")
    @Html.Partial("_WeeeTracking")
    @RenderSection("head", required: false)
}

@section inside_header {
    @Html.Partial("_WeeeHeader")
}

@section proposition_header {
   
}

@section after_header {

}

@section footer_top {
    <div class="footer_agencies">
        @Html.Partial("_WeeeFooter")
    </div>
}

@section footer_support_links {
    @Html.Partial("_WeeeFooterSupportLinks")
}

@section body_end {
    <!--[if gt IE 8]><!-->@Scripts.Render("~/bundles/jquery-3")<!--<![endif]-->
    <!--[if lte IE 8]>@Scripts.Render("~/bundles/jquery-1")<![endif]-->
    @Scripts.Render("~/bundles/govuk_frontend")
    @Scripts.Render("~/bundles/govuk_weee")
    @RenderSection("scripts", required: false)
}

<div class="govuk-width-container">
    @Html.Partial("_FeedbackBanner")
    <main class="govuk-main-wrapper app-main-class" id="content" role="main">
        @{ Html.RenderAction("_WeeeTitle", "Home", new { area = string.Empty });}
        @RenderBody()
        @if (IsSectionDefined("main_content"))
        {
            <div class="govuk-grid-row">
                <section id="main-content" class="govuk-grid-column-two-thirds">
                    @RenderSection("main_content", required: false)
                </section>
                @if (IsSectionDefined("related_content"))
                {
                    <section class="govuk-grid-column-one-third">
                        <div class="related">
                            @RenderSection("related_content", required: false)
                        </div>
                    </section>
                }
            </div>
        }

    </main>
</div>