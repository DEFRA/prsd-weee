
<div id="hmrc-timeout-overlay" class="hmrc-timeout-overlay" style="display:none"></div>
<div id="hmrc-timeout-dialog" tabindex="-1" role="dialog" aria-modal="true" class="hmrc-timeout-dialog" aria-labelledby="hmrc-timeout-heading hmrc-timeout-message" style="display:none">
    <div>
        <h1 id="hmrc-timeout-heading" class="govuk-heading-m push--top">
            You will be signed out soon
        </h1>
        <p class="govuk-body hmrc-timeout-dialog__message" aria-hidden="true">
            For your security, you will be signed out in
            <span id="hmrc-timeout-countdown" class="hmrc-timeout-dialog__countdown">
            </span>.
        </p>
        <div class="govuk-button-group">
            <button id="hmrc-timeout-keep-signin-btn" class="govuk-button">
                Continue
            </button>

            @using (Html.BeginForm("SignOut", "Account", method: FormMethod.Post, htmlAttributes: new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()

                <input class="link-submit" id="link-sign-out" type="submit" value="Sign out" />
            }
        </div>
    </div>
</div>