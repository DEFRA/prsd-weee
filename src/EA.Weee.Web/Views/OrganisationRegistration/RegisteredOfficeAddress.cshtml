@model EA.Weee.Web.ViewModels.Shared.AddressViewModel

@section main_content
    {
    @if (@Model.OrganisationType.ToString().ToLower() == "partnership" || @Model.OrganisationType.ToString().ToLower() == "soletraderorindividual")
    {
        ViewBag.Title = "Principal place of business";
        <header class="hgroup">
            <h1 class="heading-large">Principal place of business</h1>
        </header>
        <p>
            The contact details for your principal place of business.
        </p>
    }
    else
    {
        ViewBag.Title = "Registered office";
        <header class="hgroup">
            <h1 class="heading-large">
                What are the contact details for your registered office?
            </h1>
        </header>
       
        <div style="margin-bottom: 1.66667em;">
            <p>These details should be the same as the details that are listed with Companies House.</p>
        </div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()
        @Html.HiddenFor(m => m.OrganisationType)

        @Html.EditorFor(m => m.Address)

        <div class="form-group">
            <input type="submit" class="button" value="Continue" />
        </div>
    }
}

@section scripts{
    <script>
        (function ($) {
            $(function () {
                $('#Address\\.CountryId').selectToAutocomplete();
            });
        })(jQuery);

        $(document).ready(function () {
            /* Only when a validation error occurs for a select list -
                move the id from the select element to the next input element so the validation summary can link to it */
            var countryElementId = "#Address\\.CountryId";

            if ($(countryElementId).hasClass("input-validation-error")) {
                $(countryElementId).attr("name", "Address.CountryIds"); // Bug Fix - anchor doesn't work in IE if name is same as ID
                var validationInput = $(countryElementId).next("input");
                if (validationInput.length) {
                    $(countryElementId).removeAttr("id");
                    validationInput.attr("id", "Address.CountryId");
                }
            }
        });
    </script>
}