@using EA.Weee.Web.Controllers
@using EA.Weee.Web.RazorHelpers
@using MvcNavigationHelpers
@model EA.Weee.Web.ViewModels.OrganisationRegistration.PreviousRegistrationViewModel
@{
    ViewBag.Title = "Have you previously been registered as a small producer?";
}


@section full_main_content{

    @(this.WeeeGds().BackLink(@Url.Action("TonnageType")))

    @using (Html.BeginForm())
    {
        @Html.Gds().ValidationSummary()

        @Html.AntiForgeryToken()
        <header class="hgroup">
            <h1 class="govuk-heading-l">
                @ViewBag.Title
            </h1>
        </header>

        <p class="govuk-body">If you have been a member of a producer compliance scheme (PCS) or have been previously registered directly as a small producer you will need to select ‘Yes’ and find your organisation.</p>

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.SelectedValue)">
            @this.WeeeGds().RadioButtonsFor(
                m => m.SelectedValue,
                Model.PossibleValues,
                "Select if you have previously registered as a small producer",
                RadioButtonLegend.VisuallyHidden,
                RadioButtonLayout.Stacked)
        </div>

        @(this.WeeeGds().Submit("Continue"))
    }
}