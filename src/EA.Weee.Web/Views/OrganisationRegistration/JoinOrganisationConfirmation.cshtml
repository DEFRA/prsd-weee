@{
    ViewBag.Title = "Join Organisation Confirmation";
}

@section main_content {
    <header class="hgroup">
        <h1 class="heading-large">
            Your request to join this organisation has been sent
        </h1>
    </header>

    <p>You will not be able to access this organisation to manage activities under the WEEE regime until their administrator has approved your request.</p>

    <div class="form-group">
        <a href="@Url.Action("Index", "Home")" class="button">Continue</a>
    </div>
}
