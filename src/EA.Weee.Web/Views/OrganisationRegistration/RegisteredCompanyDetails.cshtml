@model EA.Weee.Web.ViewModels.OrganisationRegistration.Details.RegisteredCompanyDetailsViewModel
@{
    ViewBag.Title = "Registered company";
}
@section main_content
{
    <header class="hgroup">
        <h1 class="heading-large"> Registered company</h1>
    </header>
    <div style="margin-bottom: 1.66667em;">
        <p>Enter the details of your registered company</p>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        <div class="form-group @Html.Gds().FormGroupClass(m => m.CompanyName)">
            @Html.Gds().LabelFor(m => m.CompanyName)
            @Html.Gds().ValidationMessageFor(m => m.CompanyName)
            @Html.Gds().TextBoxFor(m => m.CompanyName, new { @maxlength = "2048" })
        </div>

        <div class="form-group @Html.Gds().FormGroupClass(m => m.BusinessTradingName)">
            @Html.Gds().LabelFor(m => m.BusinessTradingName)
            @Html.Gds().TextBoxFor(m => m.BusinessTradingName, new { @maxlength = "2048" })
        </div>

        <div class="form-group @Html.Gds().FormGroupClass(m => m.CompaniesRegistrationNumber)">
            @Html.Gds().LabelFor(m => m.CompaniesRegistrationNumber)
            @Html.Gds().ValidationMessageFor(m => m.CompaniesRegistrationNumber)
            @Html.Gds().TextBoxFor(m => m.CompaniesRegistrationNumber, new { @maxlength = "64" })
        </div>
        <div class="form-group">
            <details>
                <summary><span class="summary">Where can I find my company registration number?</span></summary>
                <div class="panel-indent">
                    <p>
                        A Company Registration Number (CRN) is allocated by Companies House when a company is registered.
                    </p>
                    <p>
                        You can search <a href="http://wck2.companieshouse.gov.uk//wcframe?name=accessCompanyInfo" target="_blank">Companies House online services</a> to find your CRN.
                    </p>
                </div>
            </details>
        </div>

        <div class="form-group">
            <button class="button" type="submit">Continue</button>
        </div>
    }
}
