@model EA.Weee.Web.ViewModels.OrganisationRegistration.Details.SoleTraderDetailsViewModel
@{
    ViewBag.Title = "Sole trader or individual";
}

<h1 class="heading-large">
    What is your business trading name?
</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <div class="form-group @Html.Gds().FormGroupClass(m => m.BusinessTradingName)">
        @Html.Gds().LabelFor(m => m.BusinessTradingName)
        @Html.Gds().TextBoxFor(m => m.BusinessTradingName)
    </div>

    <div class="form-group">
        <button class="button" type="submit">Continue</button>
    </div>
}
