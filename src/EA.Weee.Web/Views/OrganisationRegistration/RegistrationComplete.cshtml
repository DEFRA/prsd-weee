@using EA.Weee.Core.Helpers
@using EA.Weee.Web.Controllers
@using EA.Weee.Web.RazorHelpers
@model Guid?
@{
    const string title = "Organisation created";
    ViewBag.Title = title + " - GOV.UK";
}
@section full_main_content
{
    @using (Html.BeginForm("RegistrationCompleteSubmit", typeof(OrganisationRegistrationController).GetControllerName(), new { organisationId = Model }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="govuk-panel govuk-panel--confirmation govuk-!-width-two-thirds">
            <h1 class="govuk-panel__title">
                @title
            </h1>
        </div>

        <p>Your organisation has been created.</p>
        <h2 class="govuk-heading-m">What happens next</h2>
        <p>You will need to register as a small producer of EEE for this year.</p>

        <div class="govuk-form-group">
            @(this.WeeeGds().Submit("Check and complete your registration application"))
        </div>
    }
}


