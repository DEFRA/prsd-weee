@using EA.Weee.Web.RazorHelpers
@{
    const string title = "Organisation created";
    ViewBag.Title = title + " - GOV.UK";
}
@section full_main_content
{
    @using (Html.BeginForm("CheckAndCompleteApplication", "OrganisationRegistrationController", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                @title
            </h1>
        </div>

        <p>Your organisation has been created.</p>
        <h2 class="govuk-heading-l">What happens next</h2>
        <p>You will need to register your tonnage for this year</p>

        <div class="govuk-form-group">
            @(this.WeeeGds().Submit("Check and complete application"))
        </div>
    }
}


