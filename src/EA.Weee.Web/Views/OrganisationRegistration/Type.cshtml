@model EA.Weee.Web.ViewModels.OrganisationRegistration.Type.OrganisationTypeViewModel
@{
    ViewBag.Title = "Organisation Type";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <header class="hgroup">
        <h1 class="heading-large">
            What type of organisation do you work for?
        </h1>
    </header>
    <div style="margin-bottom: 1.66667em;">
        <p>
            We use the information you give us here to check through our database. This will help you to see whether you need to join an existing organisation, or create a new one.
        </p>
    </div>

    <div class="form-group">
        <details>
            <summary><span class="summary">Registered company, partnership, or sole trader?</span></summary>
            <div class="panel-indent">
                <p>
                    <h4 class="heading-small">
                        Registered company
                    </h4>
                    This may be a limited company, limited liability partnership, or similar business that has a separate legal entity to its owners. It must be formed and registered at Companies House. Such corporate bodies have a unique Company Registration Number (CRN).
                </p>
                <p>
                    <h4 class="heading-small">
                        Partnership
                    </h4>
                    You and one or more others (partners of the business) are self-employed, work for yourselves and run and own the business together. All partners own a specified percentage of the profits and liabilities of the business. This excludes limited partnerships and limited liability partnerships, which are registered companies.
                </p>
                <p>
                    <h4 class="heading-small">
                        Sole trader or individual
                    </h4>
                    You are self-employed, work for yourself and run and own your own business as an individual. You own all the profits and liabilities of your business and you may or may not have staff working for you.
                </p>
            </div>
        </details>
    </div>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.OrganisationTypes.SelectedValue)">
        @Html.EditorFor(m => m.OrganisationTypes)
    </div>

    <div class="form-group">
        <button class="button" type="submit">Continue</button>
    </div>
}
