@using EA.Weee.Web.RazorHelpers
@model EA.Weee.Web.ViewModels.Shared.YesNoChoiceViewModel
@{
    ViewBag.Title = "Do you need a user account?";
}
@section main_content
{
    <header class="hgroup">
        <h1 class="heading-large">
            Do you want to perform activities for the 2016 compliance year?
        </h1>
    </header>
    @using (Html.BeginForm(actionName: "CheckComplianceYear", controllerName: "NewUser", method: FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        <div class="form-group @Html.Gds().FormGroupClass(m => m.SelectedValue)">
            @Html.WeeeGds().RadioButtonsFor(
                m => m.SelectedValue,
                Model.PossibleValues,
                "Do you want to perform activites for the 2016 compliance year?",
                RadioButtonLegend.VisuallyHidden,
                RadioButtonLayout.Inline)
        </div>
        <div class="form-group">
            <button class="button" type="submit">Continue</button>
        </div>
    }
}