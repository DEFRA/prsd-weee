@model EA.Weee.Web.ViewModels.NotificationApplication.ImporterViewModel

@{
    ViewBag.Title = "Add importer - consignee";
}

@using (Html.BeginForm("Add", "Importer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    <header class="hgroup">
        <h2 class="heading-large">Add importer - consignee</h2>
        <div class="colored-header-bar"></div>
    </header>

    <div class="form-group">
        @Html.HiddenFor(m => m.NotificationId)
    </div>

    @Html.EditorFor(m => m.BusinessViewModel)

    <h1 class="heading-medium">Address</h1>

    @Html.EditorFor(m => m.AddressDetails)

    <h1 class="heading-medium">Contact person</h1>

    @Html.EditorFor(m => m.ContactDetails)

    <button class="button" type="submit">Continue</button>
}
