@model EA.Weee.Web.ViewModels.PCS.ChooseActivityViewModel
@{
    ViewBag.Title = "Choose Activity";
}

@section main_content
{
    <div class="back">
        <a href="@Url.Action("Summary", "Account")">Back to organisations</a>
    </div>
    <header class="hgroup">
        <h1 class="heading-large">
            What would you like to do?
        </h1>
    </header>

    @using (Html.BeginForm(actionName: "ChooseActivity", controllerName: "PCS", method: FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()
        @Html.HiddenFor(m => m.OrganisationId)

        <div class="form-group @Html.Gds().FormGroupClass(m => m.ActivityOptions.SelectedValue)" id="ActivityOptions">
            @Html.EditorFor(m => m.ActivityOptions)
        </div>

        <div class="form-group">
            <input type="submit" class="button" value="Continue" />
        </div>

        <a href="@Url.Action("AboutOrganisation", "Organisation")">Create or join another organisation</a>
    }
}


