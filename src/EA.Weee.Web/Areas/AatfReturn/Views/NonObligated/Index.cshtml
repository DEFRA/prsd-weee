@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.AatfReturn
@using EA.Weee.Web.Infrastructure
@model EA.Weee.Web.Areas.AatfReturn.ViewModels.NonObligatedValuesViewModel
@{
    ViewBag.Title = "Non-obligated WEEE";
}

@{
    var formName = AatfRedirect.NonObligatedRouteName;
    if (Model.Dcf)
    {
        formName = AatfRedirect.NonObligatedDcfRouteName;
    }
}
<section id="main-content">
    <header class="hgroup">
        <div>
            @{
                if (Model.Dcf == true)
                {
                    <h1 class="govuk-heading-l">Non-obligated WEEE retained by a DCF</h1>
                    <p class="govuk-body">This is how much of the total non-obligated WEEE that a local authority who is a DCF operator has been allowed to keep under regulation 53 and has sent to you for treatment.</p>
                }
                else
                {
                    <h1 class="govuk-heading-l">Non-obligated WEEE</h1>
                    <p class="govuk-body">This is WEEE that you received at your AATF(s) other than from or on behalf of a PCS. It should not include WEEE that has already been reported by another AATF(s).</p>
                }
            }
        </div>
    </header>
    <br />
    <p class="govuk-body">Provide tonnage to 3 decimal places. For example 1.238</p>

    <table class="govuk-table govuk-!-margin-bottom-0">
        <tr class="govuk-table__row">
            <td class="govuk-table__cell" style="border-bottom: 0px;">
                <div class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-1">
                    <div class="govuk-body govuk-!-font-size-19" style="float:right">
                        @Html.RouteLink("Use copy and paste to populate the table", AatfRedirect.Default, new { returnId = Model.ReturnId, dcf = Model.Dcf, action = "Index", controller = "NonObligatedValuesCopyPaste" }, null)
                    </div>
                </div>
            </td>
        </tr>
    </table>

    @using (Html.BeginRouteForm(formName, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        @Html.HiddenFor(m => m.Dcf)
        @Html.HiddenFor(m => m.OrganisationId)

        Html.RenderPartial("_NonObligatedWEEETable", Model);

        <div class="govuk-form-group">
            <button class="govuk-button" type="submit">Save and Continue</button>
        </div>
    }
</section>