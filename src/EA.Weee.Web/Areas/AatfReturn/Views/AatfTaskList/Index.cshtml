@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.AatfReturn
@using EA.Weee.Core.Helpers
@using EA.Weee.Web.Infrastructure
@model EA.Weee.Web.Areas.AatfReturn.ViewModels.ReturnViewModel
@{
    ViewBag.Title = "AATF task list";
}

<section id="main-content">
    <header class="hgroup">
        <div>
            <h1 class="govuk-heading-l">AATF return task list for @Model.OrganisationName</h1>
        </div>
    </header>

    <table class="govuk-table govuk-!-width-one-half">
        <caption class="govuk-table__caption govuk-visually-hidden">Compliance month and year</caption>
        <tbody class="govuk-table__body">
            <tr class="govuk-table__row">
                <td class="govuk-table__cell gov-uk-no-bottom-border" scope="row">@Html.DisplayNameFor(model => model.Year)</td>
                <td class="govuk-table__cell govuk-!-font-weight-bold gov-uk-no-bottom-border">@Model.Year</td>
            </tr>
            <tr class="govuk-table__row">
                <td class="govuk-table__cell gov-uk-no-bottom-border" scope="row">@Html.DisplayNameFor(model => model.Period)</td>
                <td class="govuk-table__cell govuk-!-font-weight-bold gov-uk-no-bottom-border">@Model.Period</td>
            </tr>
        </tbody>
    </table>

    <div class="govuk-!-margin-bottom-4"></div>

    @foreach (var item in Model.AatfsData)
    {
        <div class="govuk-grid-row govuk-table__cell">
            <div class="govuk-grid-column-one-half">
                <p>
                    @if (item.Aatf.Name == Model.AatfsData[0].Aatf.Name)
                    {
                        <b>1.</b>
                    }
                    <b>Obligated WEEE - @item.Aatf.Name</b>
                </p>
            </div>
                <div class="govuk-grid-column-one-quarter weee-tonnage-right-aligned-display">
                    <p>
                        <b>B2C (tonnes)</b>
                    </p>
                </div>
                <div class="govuk-grid-column-one-quarter weee-tonnage-right-aligned-display">
                    <p>
                        <b>B2B (tonnes)</b>
                    </p>
                </div>
        </div>
        <div class="govuk-grid-row govuk-table__cell">
            <div class="govuk-grid-column-one-half">
                <p>
                    @Html.RouteLink("Received on behalf of PCS(s)", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = @item.Aatf.Id, action = "Index", controller = "ReceivedPcsList" }, new { @class = "govuk-link govuk-link--no-visited-state" })
                </p>
            </div>

            <div class="govuk-grid-column-one-quarter weee-tonnage-right-aligned-display">
                <p>
                    @item.WeeeReceived.B2C
                </p>
            </div>

            <div class="govuk-grid-column-one-quarter weee-tonnage-right-aligned-display">
                <p>
                    @item.WeeeReceived.B2B
                </p>
            </div>

        </div>

        <div class="govuk-grid-row govuk-table__cell">
            <div class="govuk-grid-column-one-half">
                <p>
                    @Html.RouteLink("Sent to another AATF / ATF", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = @item.Aatf.Id, action = "Index", controller = "SentOnCreateSite" }, new { @class = "govuk-link govuk-link--no-visited-state" })
                </p>
            </div>

            <div class="govuk-grid-column-one-quarter weee-tonnage-right-aligned-display">
                <p>
                    @item.WeeeSentOn.B2C
                </p>
            </div>

            <div class="govuk-grid-column-one-quarter weee-tonnage-right-aligned-display">
                <p>
                    @item.WeeeSentOn.B2B
                </p>
            </div>

        </div>

        <div class="govuk-grid-row govuk-table__cell">
            <div class="govuk-grid-column-one-half">
                <p>
                    @if (Equals(item.WeeeReused.B2B, "-") && Equals(item.WeeeReused.B2C, "-"))
                    {

                        @Html.RouteLink("Reused as a whole appliance", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = @item.Aatf.Id, action = "Index", controller = "ObligatedReused" }, new { @class = "govuk-link govuk-link--no-visited-state" })
                    }
                    else
                    {
                        @Html.RouteLink("Reused as a whole appliance", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = @item.Aatf.Id, organisationId = Model.OrganisationId, action = "Index", controller = "ReusedOffSiteSummaryLIst" }, new { @class = "govuk-link govuk-link--no-visited-state" })
                    }
                </p>
            </div>

            <div class="govuk-grid-column-one-quarter weee-tonnage-right-aligned-display">
                <p>
                    @item.WeeeReused.B2C
                </p>
            </div>

            <div class="govuk-grid-column-one-quarter weee-tonnage-right-aligned-display">
                <p>
                    @item.WeeeReused.B2B
                </p>
            </div>

        </div>

    }


    <div class="govuk-grid-row govuk-table__cell">
        <div class="govuk-grid-column-one-third">
            <p>
                <b>2. Non-obligated WEEE</b>
            </p>
            <p>
                <span class="govuk-visually-hidden">Non obligated received</span>
                @Html.RouteLink("Received", AatfRedirect.NonObligatedRouteName, new { returnId = Model.ReturnId, dcf = false }, new { @class = "govuk-link govuk-link--no-visited-state" })
            </p>
            <p>
                <span class="govuk-visually-hidden">Non obligated DCF retained</span>
                @Html.RouteLink("Retained by a DCF", AatfRedirect.NonObligatedDcfRouteName, new { returnId = Model.ReturnId, dcf = true }, new { @class = "govuk-link govuk-link--no-visited-state" })
            </p>
        </div>
        <div class="govuk-grid-column-one-third weee-tonnage-right-aligned-display">
            <p>
                <b>Total (tonnes)</b>
            </p>
            <p>
                @Model.NonObligatedTonnageTotal
            </p>
            <p>
                @Model.NonObligatedTonnageTotalDcf
            </p>
        </div>
    </div>
    <div class="govuk-!-padding-bottom-7"></div>
    @using (Html.BeginRouteForm(AatfRedirect.SelectPcsRouteName, FormMethod.Post, new { style = "display: inline" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.OrganisationId)
        <button type="submit" name="checkreturn" class="govuk-button" id="pcs-check-return">
            Check my return
        </button>
    }
    <details class="govuk-details govuk-!-font-size-16" role="group">
        <summary class="govuk-details__summary" role="button" aria-controls="details-content" aria-expanded="false">
            <span class="govuk-details__summary-text">
                Some of my AATFs are missing
            </span>
        </summary>
        @Html.Partial("_ContactProgressiveDisclosure")
    </details>

</section>