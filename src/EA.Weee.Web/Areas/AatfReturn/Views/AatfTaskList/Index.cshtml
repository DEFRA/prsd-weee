@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.AatfReturn
@using EA.Weee.Core.Helpers
@using EA.Weee.Web.Infrastructure
@model EA.Weee.Web.Areas.AatfReturn.ViewModels.ReturnViewModel
@{
    ViewBag.Title = "AATF Task List";
}

<section id="main-content">
    <header class="hgroup">
        <div>
            <h1 class="govuk-heading-l">AATF return task list for @Model.OrganisationName</h1>
        </div>
    </header>
    <table class="govuk-table govuk-!-width-one-half">
        <caption class="govuk-table__caption govuk-visually-hidden">Compliance month and year</caption>
        <tbody class="govuk-table__body">
            <tr class="govuk-table__row">
                <td class="govuk-table__cell gov-uk-no-bottom-border" scope="row">@Html.DisplayNameFor(model => model.Year)</td>
                <td class="govuk-table__cell govuk-!-font-weight-bold gov-uk-no-bottom-border">@Model.Year</td>
            </tr>
            <tr class="govuk-table__row">
                <td class="govuk-table__cell gov-uk-no-bottom-border" scope="row">@Html.DisplayNameFor(model => model.Period)</td>
                <td class="govuk-table__cell govuk-!-font-weight-bold gov-uk-no-bottom-border">@Model.Period</td>
            </tr>
        </tbody>
    </table>
    <div class="govuk-!-margin-bottom-4"></div>
    @foreach (var item in Model.AatfsData)
    {
        <table class="govuk-table">
            <tbody>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell govuk-!-font-weight-bold" style="border: 0px; width:10%;">
                        @if (item.Aatf.Name == Model.AatfsData[0].Aatf.Name)
                        {
                            <b>1.</b>
                        }
                    </td>
                    <td class="govuk-table__cell govuk-!-font-weight-bold" style="width:38%">
                        Obligated WEEE - @item.Aatf.Name
                    </td>
                    <td class="govuk-table__cell" style="width:26%; text-align:right">B2C(t)</td>
                    <td class="govuk-table__cell" style="width:26%; text-align:right">B2B(t)</td>
                </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell" style="border: 0px;"></td>
                    <td class="govuk-table__cell">
                        <a class="govuk-link govuk-link--no-visited-state">
                            @Html.RouteLink("Received on behalf of PCS(s)", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = @item.Aatf.Id, action = "Index", controller = "ReceivedPcsList" }, null)
                        </a>
                    </td>
                    <td class="govuk-table__cell"><strong class="govuk-tag" style="float:right">@item.WeeeReceived.B2C</strong></td>
                    <td class="govuk-table__cell"><strong class="govuk-tag" style="float:right">@item.WeeeReceived.B2B</strong></td>
                </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell" style="border: 0px;"></td>
                    <td class="govuk-table__cell">
                        <a class="govuk-link govuk-link--no-visited-state">
                            @Html.ActionLink("Sent to another AATF / ATF", "Index", "Holding")
                        </a>
                    </td>
                    <td class="govuk-table__cell"><strong class="govuk-tag" style="float:right">@item.WeeeSentOn.B2C</strong></td>
                    <td class="govuk-table__cell"><strong class="govuk-tag" style="float:right">@item.WeeeSentOn.B2B</strong></td>
                </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell" style="border: 0px;"></td>
                    <td class="govuk-table__cell">
                        <a class="govuk-link govuk-link--no-visited-state">
                            @Html.RouteLink("Reused as a whole appliance", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = @item.Aatf.Id, action = "Index", controller = "ObligatedReused" }, null)
                        </a>
                    </td>
                    <td class="govuk-table__cell"><strong class="govuk-tag" style="float:right">@item.WeeeReused.B2C</strong></td>
                    <td class="govuk-table__cell"><strong class="govuk-tag" style="float:right">@item.WeeeReused.B2B</strong></td>
                </tr>
            </tbody>
        </table>
    }

    <table class="govuk-table">
        <tbody>
            <tr class="govuk-table__row">
                <td class="govuk-table__cell govuk-!-font-weight-bold" style="border: 0px; width:10%;">2.</td>
                <td class="govuk-table__cell govuk-!-font-weight-bold" style="width: 38%;">
                    Non-obligated WEEE
                </td>
                <td class="govuk-table__cell" style="width: 26%; text-align:right">Total(t)</td>
                <td class="govuk-table__cell" style="width: 26%;"></td>
            </tr>
            <tr class="govuk-table__row">
                <td class="govuk-table__cell" style="border: 0px;"></td>
                <td class="govuk-table__cell">
                    @Html.RouteLink("Received", AatfRedirect.NonObligated, new { returnId = Model.ReturnId, dcf = false }, new { @class = "govuk-link govuk-link--no-visited-state" })
                </td>
                <td class="govuk-table__cell"><strong class="govuk-tag" style="float:right">@Model.NonObligatedTonnageTotal</strong></td>
                <td class="govuk-table__cell"><strong style="float:right"></strong></td>
            </tr>
            <tr class="govuk-table__row">
                <td class="govuk-table__cell" style="border: 0px;"></td>
                <td class="govuk-table__cell">
                    @Html.RouteLink("Retained by a DCF", AatfRedirect.NonObligatedDcf, new { returnId = Model.ReturnId, dcf = true }, new { @class = "govuk-link govuk-link--no-visited-state" })
                </td>
                <td class="govuk-table__cell"><strong class="govuk-tag" style="float:right">@Model.NonObligatedTonnageTotalDcf</strong></td>
                <td class="govuk-table__cell"><strong style="float:right"></strong></td>
            </tr>
        </tbody>
    </table>
    <div class="govuk-!-padding-bottom-7"></div>
    @using (Html.BeginRouteForm(AatfRedirect.SelectPcsRouteName, FormMethod.Post, new { style = "display: inline" }))
    {
        @Html.HiddenFor(m => m.OrganisationId)
        <button type="submit" name="checkreturn" class="govuk-button" id="pcs-check-return">
            Check my return
        </button>
    }
    <details class="govuk-details govuk-!-font-size-16" role="group">
        <summary class="govuk-details__summary" role="button" aria-controls="details-content" aria-expanded="false">
            <span class="govuk-details__summary-text">
                Some of my AATFs are missing
            </span>
        </summary>
        @Html.Partial("_ContactProgressiveDisclosure")
    </details>

</section>