@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.AatfReturn
@using EA.Weee.Core.Helpers
@using EA.Weee.Web.Infrastructure
@using EA.Weee.Web.RazorHelpers

@model EA.Weee.Web.ViewModels.Returns.ReturnViewModel
@{
    ViewBag.Title = "AATF task list  - GOV.UK";
    var displayObligatedGroup = Model.ReportOnDisplayOptions.DisplayObligatedReceived || Model.ReportOnDisplayOptions.DisplayObligatedSentOn || Model.ReportOnDisplayOptions.DisplayObligatedReused;
}

    <section id="main-content">
        <header class="hgroup">
            <div>
                <h1 class="govuk-heading-l">AATF return task list for @Model.OrganisationName</h1>
            </div>
        </header>

        <table class="govuk-table govuk-!-width-one-half">
            <caption class="govuk-table__caption govuk-visually-hidden">Compliance month and year</caption>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell gov-uk-no-bottom-border" scope="row">@Html.DisplayNameFor(model => model.Year)</td>
                    <td class="govuk-table__cell govuk-!-font-weight-bold gov-uk-no-bottom-border">@Model.Year</td>
                </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell gov-uk-no-bottom-border" scope="row">@Html.DisplayNameFor(model => model.Period)</td>
                    <td class="govuk-table__cell govuk-!-font-weight-bold gov-uk-no-bottom-border">@Model.Period</td>
                </tr>
            </tbody>
        </table>

        <div class="govuk-!-margin-bottom-4"></div>
        @if (displayObligatedGroup)
        {
            foreach (var item in Model.AatfsData)
            {
                <div class="govuk-grid-row govuk-table__cell--thick" style="padding-top:60px">
                    <div class="govuk-grid-column-one-half">
                        <p>
                            <b>Obligated WEEE - @item.Aatf.Name (@item.Aatf.ApprovalNumber)</b>
                        </p>
                        <p>
                            Status: <b>@item.Aatf.AatfStatus</b>
                        </p>
                    </div>
                    <div class="govuk-grid-column-one-half">
                        <div class="govuk-grid-column-one-third">
                            <p>
                                <b>B2C (tonnes)</b>
                            </p>
                        </div>
                        <div class="govuk-grid-column-one-third">
                            <p>
                                <b>B2B (tonnes)</b>
                            </p>
                        </div>
                        <div class="govuk-grid-column-one-third">
                            &nbsp;
                        </div>
                    </div>
                </div>

                if (Model.ReportOnDisplayOptions.DisplayObligatedReceived)
                {
                    <div class="govuk-grid-row govuk-table__cell--thick weee-tonnage-top-aligned-display">
                        <div class="govuk-grid-column-one-half">
                            <p>
                                Received on behalf of PCS(s)
                            </p>
                        </div>
                        <div class="govuk-grid-column-one-half">
                            <div class="govuk-grid-column-one-third weee-tonnage-right-aligned-display break-word">
                                <p>
                                    @item.WeeeReceived.B2C
                                </p>
                            </div>

                            <div class="govuk-grid-column-one-third weee-tonnage-right-aligned-display break-word">
                                <p>
                                    @item.WeeeReceived.B2B
                                </p>
                            </div>
                            <div class="govuk-grid-column-one-third weee-actions-display">
                                <p>
                                    @Html.NavigationRouteLink("Add / edit data", @item.Aatf.Name + " received on behalf of PCS(s)", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = @item.Aatf.Id, action = "Index", controller = "ReceivedPcsList" }, null)
                                </p>
                            </div>
                        </div>
                    </div>
                }

                if (Model.ReportOnDisplayOptions.DisplayObligatedSentOn)
                {
                    <div class="govuk-grid-row govuk-table__cell--thick weee-tonnage-top-aligned-display">
                        <div class="govuk-grid-column-one-half">
                            <p>
                                Sent to another AATF / ATF
                            </p>
                        </div>
                        <div class="govuk-grid-column-one-half">
                            <div class="govuk-grid-column-one-third weee-tonnage-right-aligned-display break-word">
                                <p>
                                    @item.WeeeSentOn.B2C
                                </p>
                            </div>
                            <div class="govuk-grid-column-one-third weee-tonnage-right-aligned-display break-word">
                                <p>
                                    @item.WeeeSentOn.B2B
                                </p>
                            </div>
                            <div class="govuk-grid-column-one-third weee-actions-display">
                                <p>
                                    @Html.NavigationRouteLink("Add / edit data", @item.Aatf.Name + " sent to another AATF / ATF", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, organisationId = Model.OrganisationId, aatfId = @item.Aatf.Id, action = "Index", controller = "SentOnSiteSummaryList" }, null)
                                </p>
                            </div>
                        </div>
                    </div>
                }

                if (Model.ReportOnDisplayOptions.DisplayObligatedReused)
                {
                    <div class="govuk-grid-row govuk-table__cell--thick weee-tonnage-top-aligned-display">
                        <div class="govuk-grid-column-one-half">
                            <p>
                                Reused as a whole appliance
                            </p>
                        </div>
                        <div class="govuk-grid-column-one-half">
                            <div class="govuk-grid-column-one-third weee-tonnage-right-aligned-display break-word">
                                <p>
                                    @item.WeeeReused.B2C
                                </p>
                            </div>
                            <div class="govuk-grid-column-one-third weee-tonnage-right-aligned-display break-word">
                                <p>
                                    @item.WeeeReused.B2B
                                </p>
                            </div>
                            <div class="govuk-grid-column-one-third weee-actions-display">
                                <p>
                                    @if (item.WeeeReused.RedirectToSummary)
                                    {
                                        @Html.NavigationRouteLink("Add / edit data", @item.Aatf.Name + " Reused as a whole appliance", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = @item.Aatf.Id, organisationId = Model.OrganisationId, action = "Index", controller = "ReusedOffSiteSummaryLIst" }, null)
                                    }
                                    else
                                    {
                                        @Html.NavigationRouteLink("Add / edit data", @item.Aatf.Name + " Reused as a whole appliance", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = @item.Aatf.Id, action = "Index", controller = "ObligatedReused" }, null)
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
        }

        @if (Model.ReportOnDisplayOptions.DisplayNonObligated)
        {
            <div class="govuk-grid-row govuk-table__cell--thick weee-tonnage-top-aligned-display">
                <div class="govuk-grid-column-one-half">
                    <p>
                        <b>Non-obligated WEEE</b>
                    </p>
                </div>
                <div class="govuk-grid-column-one-half">
                    <div class="govuk-grid-column-one-third">
                        &nbsp;
                    </div>
                    <div class="govuk-grid-column-one-third">
                        <p>
                            <b>Total (tonnes)</b>
                        </p>
                    </div>
                    <div class="govuk-grid-column-one-third">
                        &nbsp;
                    </div>
                </div>
            </div>
            <div class="govuk-grid-row govuk-table__cell--thick weee-tonnage-top-aligned-display">
                <div class="govuk-grid-column-one-half">
                    <p>
                        Received
                    </p>
                </div>
                <div class="govuk-grid-column-one-half">
                    <div class="govuk-grid-column-one-third">
                        &nbsp;
                    </div>
                    <div class="govuk-grid-column-one-third weee-tonnage-right-aligned-display break-word">
                        <p>
                            @Model.NonObligatedTonnageTotal
                        </p>
                    </div>
                    <div class="govuk-grid-column-one-third weee-actions-display">
                        <p>
                            @Html.NavigationRouteLink("Add / edit data", "Non obligated received", AatfRedirect.NonObligatedRouteName, new { returnId = Model.ReturnId, dcf = false }, null)
                        </p>
                    </div>
                </div>
            </div>
            if (Model.ReportOnDisplayOptions.DisplayNonObligatedDcf)
            {
                <div class="govuk-grid-row govuk-table__cell--thick weee-tonnage-top-aligned-display">
                    <div class="govuk-grid-column-one-half">
                        <p>
                            Retained by a DCF
                        </p>
                    </div>
                    <div class="govuk-grid-column-one-half">
                        <div class="govuk-grid-column-one-third">
                            &nbsp;
                        </div>
                        <div class="govuk-grid-column-one-third weee-tonnage-right-aligned-display break-word">
                            <p>
                                @Model.NonObligatedTonnageTotalDcf
                            </p>
                        </div>
                        <div class="govuk-grid-column-one-third weee-actions-display">
                            <p>
                                @Html.NavigationRouteLink("Add / edit data", "Non obligated DCF retained", AatfRedirect.NonObligatedDcfRouteName, new { returnId = Model.ReturnId, dcf = true }, null)
                            </p>
                        </div>
                    </div>
                </div>
            }
        }

        @if (!displayObligatedGroup && !Model.ReportOnDisplayOptions.DisplayNonObligated)
        {
            <h2 class="govuk-heading-m">
                Nothing to report
            </h2>
        }
        <div class="govuk-!-padding-bottom-7"></div>
        @using (Html.BeginRouteForm(AatfRedirect.SelectPcsRouteName, FormMethod.Post, new { style = "display: inline" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.OrganisationId)
            <button type="submit" name="checkreturn" class="govuk-button" id="pcs-check-return">
                Check return
            </button>

            <p>
                @(this.WeeeGds().ActionLinkWithEventTracking("Change what you want to report on",
                Url.RouteUrl(AatfRedirect.SelectReportOptionsRouteName, new { returnId = Model.ReturnId, organisationId = Model.OrganisationId }),
                "AATF return",
                "Change report options",
                "Change report options"
                ))
            </p>
        }

        <div>
            @this.WeeeGds().CreateProgressiveDisclosure(" Some of my AATFs are missing",
           @Html.Partial("_ContactProgressiveDisclosure").ToString(),
           "Hidden content",
           "Progressive disclosure",
           "Some of my AATFs are missing")
        </div>

        <a href="@Url.Action("Index", "Returns", new { organisationId = Model.OrganisationId})" class="govuk-back-link">Back</a>
    </section>
