@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Web.Infrastructure
@using EA.Weee.Core.AatfReturn
@model EA.Weee.Web.Areas.AatfReturn.ViewModels.ObligatedViewModel
@{
    ViewBag.Title = "Reused WEEE";
}

<section id="main-content">
    <header class="hgroup">
        <div>
            <h2 class="govuk-heading-l">
                WEEE that has been reused as a whole appliance
            </h2>
        </div>
    </header>
    <p class="govuk-body">
        This is WEEE that has been refurbished or repaired to the point it is no longer waste
    </p>
    <p class="govuk-body">
        Provide tonnage to 3 decimal places. For example 1.238
    </p>

    @using (Html.BeginRouteForm(AatfRedirect.AatfOrganisationSelectedRoute, FormMethod.Post))
    {
        @Html.Gds().ValidationSummary()

        <div class="govuk-table govuk-!-margin-bottom-0">
            <div class="govuk-grid-column-one-half">&nbsp;</div>
            <div class="govuk-grid-column-one-half govuk-body govuk-!-font-size-19" style="padding-left: 1em">
                @Html.RouteLink("Use copy and paste to populate the table", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = Model.AatfId, schemeId = Guid.Empty, obligatedType = ObligatedType.Reused, action = "Index", controller = "ObligatedValuesCopyPaste" }, null)
            </div>
        </div>

        Html.RenderPartial("_ObligatedWeeeTable", Model);
        @Html.HiddenFor(m => m.AatfId)
        @Html.HiddenFor(m => m.OrganisationId)

        @Html.AntiForgeryToken()
        <form method="post" class="form" style="display: inline">
            <button type="submit" name="save" class="govuk-button" id="aatf-task-list">
                Save and continue
            </button>
        </form>
    }

    @Scripts.Render("~/bundles/weee_tonnage_totals")
    <script>
        TonnageTotals('B2C');
        TonnageTotals('B2B');
    </script>
    @{
        Html.RenderPartial("_AatfCheckReturnButton", Model.ReturnId);
    }
    <p>
        @Html.RouteLink("Back", AatfRedirect.Default, new { returnId = Model.ReturnId, controller = "AatfTaskList" }, new { @class = "govuk-back-link" })
    </p>
</section>
