@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Web.Infrastructure
@model EA.Weee.Web.Areas.AatfReturn.ViewModels.ObligatedViewModel
@{
    ViewBag.Title = "Sent On WEEE - GOV.UK";
}

<section id="main-content">
    <header class="hgroup">
        <div>
            <h1 class="govuk-heading-l">
                WEEE sent to @Model.SiteName for treatment
            </h1>
        </div>
    </header>
    <p class="govuk-body">
        This is WEEE that you received at your AATF(s) which you have not treated and was sent on for treatment elsewhere
    </p>
    <p class="govuk-body">
        Provide tonnage to 3 decimal places. For example 1.238
    </p>

    @using (Html.BeginRouteForm(AatfRedirect.AatfOrganisationSelectedRoute, FormMethod.Post))
    {
        @Html.Gds().ValidationSummary()

        <div class="govuk-table govuk-!-margin-bottom-0">
            <div class="govuk-grid-column-one-half">&nbsp;</div>
            <div class="govuk-grid-column-one-half govuk-body govuk-!-font-size-19" style="padding-left: 1em">
                @Html.RouteLink("Use copy and paste to populate the table", AatfRedirect.Default, new { returnId = Model.ReturnId, organisationId = Model.OrganisationId, weeeSentOnId = Model.WeeeSentOnId, aatfId = Model.AatfId, siteName = Model.SiteName, action = "Index", controller = "ObligatedSentOnValuesCopyPaste" }, null)
            </div>
        </div>

        Html.RenderPartial("_ObligatedWeeeTable", Model);
        @Html.HiddenFor(m => m.AatfId)
        @Html.HiddenFor(m => m.OrganisationId)
        @Html.HiddenFor(m => m.SiteAddressId)
        @Html.HiddenFor(m => m.WeeeSentOnId)
        @Html.HiddenFor(m => m.SiteName)

        @Html.AntiForgeryToken()

        <form method="post" class="form" style="display: inline">
            <button type="submit" name="save" class="govuk-button" id="aatf-task-list">
                Save and continue
            </button>
        </form>
    }

    @Scripts.Render("~/bundles/weee_tonnage_totals")
    <script>
        TonnageTotals('B2C');
        TonnageTotals('B2B');
    </script>
    @Html.RouteLink("Back", AatfRedirect.AatfOrganisationSelectedRoute, new { controller = "SentOnCreateSiteOperator", action = "Index", returnId = Model.ReturnId, aatfId = Model.AatfId, organisationId = Model.OrganisationId, weeeSentOnId = Model.WeeeSentOnId }, new { @class = "govuk-back-link" })
</section>