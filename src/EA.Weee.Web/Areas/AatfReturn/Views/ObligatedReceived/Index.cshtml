@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.AatfReturn
@using EA.Weee.Web.Infrastructure
@model EA.Weee.Web.Areas.AatfReturn.ViewModels.ObligatedViewModel
@{
    ViewBag.Title = "Received WEEE";
}

<section id="main-content">
    <header class="hgroup">
        <div>
            <h1 class="govuk-heading-l">WEEE that has been received for treatment at @Model.AatfName from @Model.SchemeName</h1>
        </div>
    </header>
    <p class="govuk-body">
        This is WEEE from designated collection facilities (DCFs), distributors and final holders which a PCS has arranged for you to treat.
    </p>
    <p class="govuk-body">
        Provide tonnage to 3 decimal places. For example 1.238
    </p>
    <table class="govuk-table govuk-!-margin-bottom-0">
        <tr class="govuk-table__row">
            <td class="govuk-table__cell govuk-!-width-one-half" style="border-bottom: 0px;"></td>
            <td class="govuk-table__cell" style="border-bottom: 0px;" colspan="2">
                <div class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-1 govuk-!-width-three-quarters">
                    <div class="govuk-body govuk-!-font-size-19">
                        @Html.RouteLink("Use copy and paste to populate the table", AatfRedirect.AatfSelectedRoute, new { returnId = Model.ReturnId, aatfId = Model.AatfId, schemeId = Model.SchemeId, action = "Index", controller = "ObligatedValuesCopyPaste" }, null)
                    </div>
                </div>
            </td>
        </tr>
    </table>
    
    @using (Html.BeginRouteForm(AatfRedirect.AatfSchemeSelectedRoute, FormMethod.Post))
    {
        @Html.Gds().ValidationSummary()

        Html.RenderPartial("_ObligatedWeeeTable", Model);
        @Html.HiddenFor(m => m.AatfName)
        @Html.HiddenFor(m => m.AatfId)
        @Html.HiddenFor(m => m.SchemeName)
        @Html.HiddenFor(m => m.SchemeId)
        @Html.AntiForgeryToken()
        <form method="post" class="form" style="display: inline">
            <button type="submit" name="save" class="govuk-button" id="aatf-task-list">
                Save and continue
            </button>
        </form>
    }

    @Scripts.Render("~/bundles/weee_tonnage_totals")
    <script>
        TonnageTotals('B2C');
        TonnageTotals('B2B');
    </script>
</section>