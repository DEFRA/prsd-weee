@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Web.Areas.Scheme.Controllers
@using EA.Weee.Web.RazorHelpers
@using MvcNavigationHelpers
@model EA.Weee.Web.Areas.Scheme.ViewModels.TransferEvidenceNotesViewModel
@{
    ViewBag.Title = "Transfer from - GOV.UK";

    ViewData.Add("controller", "TransferEvidence");
    ViewData.Add("postAction", "TransferFrom");
}

@section full_main_content
{
    @(this.WeeeGds().BackLink(@Url.UrlFor<TransferEvidenceController>(a => a.TransferEvidenceNote(Model.PcsId, Model.ComplianceYear))))

    <h1 class="govuk-heading-l">
        From which evidence notes would you like to transfer tonnage to @Model.RecipientName?
    </h1>

    @Html.Gds().ValidationSummary()

    @{ Html.RenderPartial("~/Areas/Scheme/Views/Shared/_TransferFromSummaryPartial.cshtml", Model, new ViewDataDictionary() { new KeyValuePair<string, object>("displayRemovingWarning", false) });
    }
}
