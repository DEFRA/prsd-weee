        @Html.Hidden("transferEvidenceNoteId", Model.EvidenceNoteId);
        @(this.WeeeGds().Submit("Void evidence note transfer", new { id = "voidTransferNoteButton", @class = "govuk-button", style = "margin-top: 20px" }, false))
