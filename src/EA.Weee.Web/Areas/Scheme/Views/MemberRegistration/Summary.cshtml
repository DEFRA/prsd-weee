@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.Helpers
@using EA.Weee.Web.RazorHelpers
@model System.Collections.Generic.List<System.Int32>
@{
    ViewBag.Title = "Summary";
}

@section main_content {
    <header class="hgroup">
        <div>
            <h1 class="heading-large">Would you like to view, add or amend PCS members?</h1>
        </div>
    </header>

    <div>
        <h2 class="heading-medium">Files available for download</h2>
    </div>
    <div class="form-group">
        @foreach (int complianceYear in Model)
        {
            var csvFileName = "Overview of current members " + complianceYear + ".csv";

            @(this.WeeeGds().ActionLinkWithEventTracking(csvFileName, "GetProducerCSV", "MemberRegistration",
                "Downloads", "Overview of current members", "Compliance year: " + complianceYear, new RouteValueDictionary(new { complianceYear = complianceYear })))
            <span style="color: #6f777b"> (less than 500KB).</span>
            <br />
        }
    </div>

    <div>
        @Html.ActionLink("Add or amend", "AddOrAmendMembers", "MemberRegistration", new { @area = "Scheme" }, new { @class = "button" })
    </div>

    <div>
        @Html.ActionLink("Perform another activity", "ChooseActivity", "Home")
    </div>
}
