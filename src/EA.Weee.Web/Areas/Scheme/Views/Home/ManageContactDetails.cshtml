@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.DataStandards
@using EA.Weee.Web.Areas.Scheme.ViewModels
@model EA.Weee.Core.Scheme.SchemeData

@{
    ViewBag.Title = PcsAction.ManageContactDetails;
}

@section main_content {
    <header class="hgroup">
        <h1 class="govuk-heading-l">@PcsAction.ManageContactDetails</h1>
    </header>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        @Html.HiddenFor(model => model.OrganisationId)
        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => model.Contact.RowVersion)

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Contact.FirstName)">
            @Html.Gds().ValidationMessageFor(model => model.Contact.FirstName)
            @Html.Gds().LabelFor(model => model.Contact.FirstName)
            @Html.Gds().TextBoxFor(model => model.Contact.FirstName, new { @class = "govuk-!-width-one-half", @maxlength = CommonMaxFieldLengths.FirstName })
        </div>

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Contact.LastName)">
            @Html.Gds().ValidationMessageFor(model => model.Contact.LastName)
            @Html.Gds().LabelFor(model => model.Contact.LastName)
            @Html.Gds().TextBoxFor(model => model.Contact.LastName, new { @class = "govuk-!-width-one-half", @maxlength = CommonMaxFieldLengths.LastName })
        </div>

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.Contact.Position)">
            @Html.Gds().ValidationMessageFor(model => model.Contact.Position)
            @Html.Gds().LabelFor(model => model.Contact.Position)
            @Html.Gds().TextBoxFor(model => model.Contact.Position, new { @class = "govuk-!-width-one-half", @maxlength = CommonMaxFieldLengths.Position })
        </div>

        @Html.EditorFor(model => model.Address)

        <p>
            <button class="govuk-button">Save and Continue</button>
        </p>
    }

    <div>
        @Html.ActionLink("Leave unchanged and perform another activity", "ChooseActivity", new { pcsId = Model.OrganisationId })
    </div>
}

