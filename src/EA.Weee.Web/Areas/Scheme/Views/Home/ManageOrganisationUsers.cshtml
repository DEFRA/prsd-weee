@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@model EA.Weee.Web.Areas.Scheme.ViewModels.OrganisationUsersViewModel
@{
    ViewBag.Title = "Manage Organisation Users";
}

@section main_content
{
    <header class="hgroup">
        <h1 class="heading-large">Which user would you like to manage?</h1>
    </header>

   @using (Html.BeginForm(actionName: "ManageOrganisationUsers", controllerName: "Home", method: FormMethod.Post))
    {
        @Html.Gds().ValidationSummary()
        @Html.AntiForgeryToken()

        <div class="form-group @Html.Gds().FormGroupClass(m => m.OrganisationUsers.Selected)">
            @Html.Gds().ValidationMessageFor(m => m.OrganisationUsers.Selected)
            @Html.EditorFor(m => m.OrganisationUsers)
        </div>
    <p>
        <input type="submit" class="button" value="Continue" />
    </p>
    }
<div>
     @Html.ActionLink("Perform another activity", "ChooseActivity", "Home")
</div>
}