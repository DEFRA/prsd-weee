@model EA.Weee.Web.Areas.Scheme.ViewModels.ManageEvidenceNotes.SummaryEvidenceViewModel

@section full_main_content
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            @Html.Partial("_ManageEvidenceNotesHeaderAndTabs", Model)

            <section class="govuk-tabs__panel" id="pcsEvidenceSummary">

                <header class="hgroup">
                    <h2 class="govuk-heading-m">
                        Evidence summary
                    </h2>
                </header>

                @if (Model.DisplayNoDataMessage)
                {
                    <p class="govuk-details__text govuk-!-margin-bottom-4 govuk-!-margin-bottom-4">
                        Evidence column includes approved evidence and net transfer
                    </p>
                }
                else
                {
                    <p class="govuk-details__text govuk-!-margin-bottom-4 govuk-!-margin-bottom-4">
                        The data shown in the table is for household evidence.
                        <br/>
                        The evidence column includes approved evidence and net transfer.
                    </p>
                }

                <table id="evidence-summary-table" class="govuk-table">
                    <caption class="govuk-table__caption govuk-visually-hidden">Obligation evidence summary</caption>
                    <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header">
                            Category
                        </th>
                        <th class="govuk-table__header govuk-!-text-align-left" style="width: 20%;">
                            Obligation (tonnes)
                        </th>
                        <th class="govuk-table__header govuk-!-text-align-left" style="width: 16%;">
                            Evidence (tonnes)
                        </th>
                        <th class="govuk-table__header govuk-!-text-align-left" style="width: 16%;">
                            Reuse (tonnes)
                        </th>
                        <th class="govuk-table__header govuk-!-text-align-left" style="width: 16%;">
                            Transferred out (tonnes)
                        </th>
                        <th class="govuk-table__header govuk-!-text-align-left" style="width: 16%;">
                            Transferred in (tonnes)
                        </th>
                        <th class="govuk-table__header govuk-!-text-align-left" style="width: 16%;">
                            Difference (tonnes)
                        </th>
                    </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                    @for (var i = 0; i < Model.ObligationEvidenceValues.Count; i++)
                    {
                        var category = Model.ObligationEvidenceValues[i];

                        <tr class="govuk-table__row" id="category-row-@category.CategoryId">
                            <td class="govuk-table__cell">
                                <span id="@category.CategoryId-label">@(@category.CategoryId). @category.CategoryDisplay</span>
                            </td>
                            <td class="govuk-table__cell govuk-!-text-align-right break-word">
                                @category.Obligation
                            </td>
                            <td class="govuk-table__cell govuk-!-text-align-right break-word">
                                @category.Evidence
                            </td>
                            <td class="govuk-table__cell govuk-!-text-align-right break-word">
                                @category.Reused
                            </td>
                            <td class="govuk-table__cell govuk-!-text-align-right break-word">
                                @category.TransferredOut
                            </td>
                            <td class="govuk-table__cell govuk-!-text-align-right break-word">
                                @category.TransferredIn
                            </td>
                            <td class="govuk-table__cell govuk-!-text-align-right break-word">
                                @category.Difference
                            </td>
                        </tr>
                    }

                    <tr class="govuk-table__row govuk-panel-grey-background">
                        <td class="govuk-table__cell">
                            <p class="govuk-body"><strong>Category 2-10 summary</strong></p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="Obligation2To10Total">@Model.Obligation210Total</p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="Evidence2To10Total">@Model.Evidence210Total</p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="Reused2To10Total">@Model.Reuse210Total</p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="TransferredOut2To10Total">@Model.TransferredOut210Total</p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="TransferredIn2To10Total">@Model.TransferredIn210Total</p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="Difference2To10Total">@Model.Difference210Total</p>
                        </td>
                    </tr>

                    <tr class="govuk-table__row govuk-panel-grey-background">
                        <td class="govuk-table__cell">
                            <p class="govuk-body"><strong>Total (tonnes)</strong></p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="ObligationTotal">@Model.ObligationTotal</p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="EvidenceTotal">@Model.EvidenceTotal</p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="ReusedTotal">@Model.ReuseTotal</p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="TransferredOutTotal">@Model.TransferredOutTotal</p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="TransferredInTotal">@Model.TransferredInTotal</p>
                        </td>
                        <td class="govuk-table__cell govuk-table__cell--numeric">
                            <p class="govuk-body govuk-!-text-align-right break-word" id="DifferenceTotal">@Model.DifferenceTotal</p>
                        </td>
                    </tr>
                    </tbody>
                </table>

            </section>
        </div>
    </div>
}