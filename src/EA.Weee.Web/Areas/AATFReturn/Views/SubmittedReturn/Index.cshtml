@{
    ViewBag.Title = "Submitted Return";
}

<div class="govuk-panel govuk-panel--confirmation govuk-!-width-two-thirds" style="display: inline-block">
    <h1 class="govuk-panel__title">
        You have successfully submitted your AATF return for PERIOD YEAR
    </h1>
</div>
<div class="govuk-!-padding-bottom-8"></div>
<div class="govuk-!-width-two-thirds">
    <p class="govuk-body">Your AATF quarterly return has been submitted successfully.</p>
    <div class="govuk-!-padding-bottom-2"></div>
    <p class="govuk-body">
        If you have completed all your activities you can <a href="#" class="govuk-link govuk-link--no-visited-state">sign out</a> or proceed to perform more
        activities.
    </p>
</div>
@using (Html.BeginForm("Index", "SubmittedReturn", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="govuk-button">
        Perform another activity
    </button>
}

