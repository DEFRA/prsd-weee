@model EA.Weee.Web.Areas.AatfReturn.ViewModels.SubmittedReturnViewModel
@{
    ViewBag.Title = "Submitted Return";
}

<div class="govuk-!-padding-bottom-5"></div>
<div class="govuk-panel govuk-panel--confirmation govuk-!-width-two-thirds">
    <h1 class="govuk-panel__title">
        You have successfully submitted your AATF return for @Model.Period
    </h1>
</div>
<div class="govuk-!-padding-bottom-5"></div>
<div class="govuk-!-width-two-thirds">
    <p class="govuk-body">Your AATF quarterly return has been submitted successfully.</p>
    <div class="govuk-!-padding-bottom-2"></div>
    <p class="govuk-body">
        If you have completed all your activities you can
    </p>
    @using (Html.BeginForm("SignOut", "Account", new { area = "" }, FormMethod.Post, new { id = "logout" }))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="link-submit">
            sign out
        </button>
    }
    <p class="govuk-body">
        or proceed to perform more activities.
    </p>
</div>

@using (Html.BeginForm("Index", "SubmittedReturn", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="govuk-button">
        Perform another activity
    </button>
}

