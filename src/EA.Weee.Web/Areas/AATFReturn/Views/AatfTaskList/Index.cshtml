@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.AatfReturn
@using EA.Weee.Core.Helpers
@model EA.Weee.Web.Areas.AatfReturn.ViewModels.ReturnViewModel
@{
    /**/

    ViewBag.Title = "AATF Task List";
}

<h2 class="govuk-heading-l">AATF return task list for @Model.OrganisationName</h2>
@using (Html.BeginForm("Index", "AatfTaskList", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table class="govuk-table" style="width: 30%;" id="compliance-information-table">
        <tbody>
            <tr class="govuk-table__row">
                <td class="govuk-table__cell" style="border: 0px;">@Html.DisplayNameFor(model => model.Year)</td>
                <td id="compliance-insert" class="govuk-table__cell govuk-!-font-weight-bold" style="border: 0px;">@Model.Year</td>
            </tr>
            <tr class="govuk-table__row">
                <td class="govuk-table__cell" style="border: 0px;">@Html.DisplayNameFor(model => model.Period)</td>
                <td id="compliance-insert" class="govuk-table__cell govuk-!-font-weight-bold" style="border: 0px;">@Model.Period</td>
            </tr>
        </tbody>
    </table>

    <div class="govuk-!-margin-bottom-4"></div>

    foreach (var item in Model.AatfsData)
    {
        <table class="govuk-table" style="width: 70%;">
            <tbody>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell govuk-!-font-weight-bold" style="border: 0px; width:10%;">
                        @if (item.AatfName == Model.AatfsData[0].AatfName)
                        {
                            <b>1.</b>
                        }
                    </td>
                    <td class="govuk-table__cell govuk-!-font-weight-bold" style="width:60%">
                        Obligated WEEE - @item.AatfName
                    </td>
                    <td class="govuk-table__cell" style="width:15%">B2C</td>
                    <td class="govuk-table__cell" style="width:15%">B2B</td>
                </tr>
                @foreach (var process in item.ProcessObligatedData)
                {
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell" style="border: 0px;"></td>
                        <td class="govuk-table__cell">
                            <a class="govuk-link govuk-link--no-visited-state">
                                @Html.ActionLink(@process.ProcessName, "Index", "Holding")
                            </a>
                        </td>
                        <td class="govuk-table__cell"><strong class="govuk-tag">@process.WeeeData[0].B2C.ToTonnageDisplay()</strong></td>
                        <td class="govuk-table__cell"><strong class="govuk-tag">@process.WeeeData[0].B2B.ToTonnageDisplay()</strong></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <table class="govuk-table" style="width: 70%;">
        <tbody>
            <tr class="govuk-table__row">
                <td class="govuk-table__cell govuk-!-font-weight-bold" style="border: 0px; width:10%;">2.</td>
                <td class="govuk-table__cell govuk-!-font-weight-bold" style="width: 60%;">
                    Non-obligated WEEE
                </td>
                <td class="govuk-table__cell" style="width: 30%;"></td>
            </tr>
            <tr class="govuk-table__row">
                <td class="govuk-table__cell" style="border: 0px;"></td>
                <td class="govuk-table__cell">
                    @Html.RouteLink("Received", "AatfReturn_NonObligated", new { organisationId = Model.OrganisationId, returnId = Model.ReturnId, dcf = false }, new { @class = "govuk-link govuk-link--no-visited-state" })
                </td>
                <td class="govuk-table__cell"><strong class="govuk-tag">@Model.NonObligatedTonnageTotal</strong></td>
            </tr>
            <tr class="govuk-table__row">
                <td class="govuk-table__cell" style="border: 0px;"></td>
                <td class="govuk-table__cell">
                    @Html.RouteLink("Retained by a DCF", "AatfReturn_NonObligatedDcf", new { organisationId = Model.OrganisationId, returnId = Model.ReturnId, dcf = true }, new { @class = "govuk-link govuk-link--no-visited-state" })
                </td>
                <td class="govuk-table__cell"><strong class="govuk-tag">@Model.NonObligatedTonnageTotalDcf</strong></td>
            </tr>
        </tbody>
    </table>
    <div class="govuk-!-padding-bottom-7"></div>
    <form method="post" class="form" style="display: inline">
        <button type="submit" name="checkreturn" class="govuk-button" id="pcs-check-return">
            Check my return
        </button>
    </form>
    <details class="govuk-details govuk-!-font-size-16" role="group">
        <summary class="govuk-details__summary" role="button" aria-controls="details-content" aria-expanded="false">
            <span class="govuk-details__summary-text">
                Some of my AATFs are missing
            </span>
        </summary>
        @Html.Partial("_ContactProgressiveDisclosure")
    </details>
}