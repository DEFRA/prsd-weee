@using EA.Weee.Web.Infrastructure
@model EA.Weee.Web.Areas.AatfReturn.ViewModels.ObligatedValuesCopyPasteViewModel

@{
    ViewBag.Title = "Copy and Paste Obligated WEEE";
}

<section id="main-content">
    <header class="hgroup">
        <div>
            <h1 class="govuk-heading-l">WEEE that has been received for treatment at @Model.AatfName from @Model.SchemeName</h1>
        </div>
    </header>
    <p class="govuk-body">
        Provide tonnage to 3 decimal places. For example 1.238
    </p>
    <p class="govuk-body">
        You can copy the WEEE in tonnes from an Excel spreadsheet.
    </p>
    <p class="govuk-body">
        Data entered here will be interpreted as category 1 at the top through to category 14 at the bottom.
    </p>
    @using (Html.BeginRouteForm(AatfRedirect.AatfSchemeSelectedRoute, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()
        @Html.HiddenFor(m => m.OrganisationId)

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half">
                <h2 class="govuk-heading-s" id="b2c-entry">B2C</h2>
                <textarea class="govuk-textarea govuk-!-width-three-quarters" placeholder="Paste B2C values here" id="B2cPastedValues" name="B2cPastedValues" style="height: 400px;" aria-labelledby="b2c-entry"></textarea>
            </div>
            <div class="govuk-grid-column-one-half">
                <h2 class="govuk-heading-s" id="b2b-entry">B2B</h2>
                <textarea class="govuk-textarea govuk-!-width-three-quarters" placeholder="Paste B2B values here" id="B2bPastedValues" name="B2bPastedValues" style="height: 400px;" aria-labelledby="b2b-entry"></textarea>
            </div>
        </div>

        <form method="post" class="form" style="display: inline">
            <button type="submit" class="govuk-button" id="aatf-task-list">
                Save and continue
            </button>

            <button type="submit" name="cancel" value="cancel" class="govuk-button grey-cancel-button">
                Cancel
            </button>
        </form>
    }
</section>
