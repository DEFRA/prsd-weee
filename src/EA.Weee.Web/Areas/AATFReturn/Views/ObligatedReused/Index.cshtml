@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.AatfReturn
@model EA.Weee.Web.Areas.AatfReturn.ViewModels.ObligatedViewModel
@{
    ViewBag.Title = "Received WEE";
}

<h2 class="govuk-heading-l">WEEE that has been reused as a whole appliance</h2>

<p class="govuk-body">
    This is WEEE that has been refurbished or repaired to the point it is no longer waste.
</p>
<p class="govuk-body">
    Provide tonnage to 3 decimal places. For example 1.238
</p>

@using (Html.BeginForm("Index", "ObligatedReused", FormMethod.Post))
{
    @Html.Gds().ValidationSummary()

    Html.RenderPartial("_ObligatedWeeeTable", Model);

    @Html.AntiForgeryToken()
    <form method="post" class="form" style="display: inline">
        <button type="submit" name="save" class="govuk-button" id="pcs-check-return">
            Save and continue
        </button>
    </form>
}

@Scripts.Render("~/bundles/weee_tonnage_totals")
<script>
    TonnageTotals('B2C');
    TonnageTotals('B2B');
</script>