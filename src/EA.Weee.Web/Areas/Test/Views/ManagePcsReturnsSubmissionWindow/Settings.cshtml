@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.DataStandards
@using EA.Weee.Web.RazorHelpers
@model EA.Weee.Web.Areas.Test.ViewModels.ManagePcsReturnsSubmissionWindow.SettingsModel
@{
    ViewBag.Title = "Submission window settings";
}

@section main_content
{
    <header class="hgroup">
        <h1 class="govuk-heading-l">
            Returns and Evidence System Date
        </h1>
    </header>

    <p>Use this page to manage the system date that is used for for returns submission and evidence</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.FixCurrentDate)">
            @Html.Gds().ValidationMessageFor(m => m.FixCurrentDate)
            @Html.Gds().CheckBoxFrontEndFor(m => m.FixCurrentDate, new { @class= "govuk-checkboxes__input" })
        </div>
        <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.CurrentDate)">
            @Html.Gds().LabelFor(m => m.CurrentDate)
            @Html.Gds().ValidationMessageFor(m => m.CurrentDate)
            @if (Model.CurrentDate.HasValue)
            {
                <input id="CurrentDate" name="CurrentDate" class="govuk-!-width-one-third form-control govuk-input date-picker"  value="@Model.CurrentDate.Value.ToString("dd/MM/yyyy")"/>
            }
            else
            {
                <input id="CurrentDate" name="CurrentDate" class="govuk-!-width-one-third form-control govuk-input date-picker" />
            }
        </div>

        @(this.WeeeGds().Submit("Continue"))
    }
}