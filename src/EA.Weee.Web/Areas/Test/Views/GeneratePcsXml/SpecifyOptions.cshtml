@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@model EA.Weee.Web.Areas.Test.ViewModels.GeneratePcsXmlOptionsViewModel

@{
    ViewBag.Title = "Specify Options";
}

@section main_content
{
    <header class="hgroup">
        <h1 class="heading-large">
            Specify options for the XML file
        </h1>
    </header>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        @Html.HiddenFor(model => model.OrganisationID);
        
        <div class="form-group" @Html.Gds().FormGroupClass(m => m.SchemaVersion)>
            @Html.Gds().LabelFor(model => model.SchemaVersion)
            @Html.Gds().ValidationMessageFor(mode => Model.SchemaVersion)
            @Html.EnumDropDownListFor(model => model.SchemaVersion)
        </div>

        <div class="form-group" @Html.Gds().FormGroupClass(m => m.NumberOfNewProducers)>
            @Html.Gds().LabelFor(model => model.NumberOfNewProducers)
            @Html.Gds().ValidationMessageFor(mode => Model.NumberOfNewProducers)
            @Html.Gds().TextBoxFor(model => model.NumberOfNewProducers)
        </div>

        <div class="form-group">
            <input type="submit" class="button" value="Continue" />
        </div>
        
        @Html.ActionLink("Select a different PCS", "SelectOrganisation", "GeneratePcsXml", null, new { @class = "button" })
    }
}