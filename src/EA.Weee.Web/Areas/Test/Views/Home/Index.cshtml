@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Web.RazorHelpers
@model EA.Weee.Web.Areas.Test.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Choose Activity";
}

@section main_content
{
    <header class="hgroup">
        <h1 class="heading-large">
            What would you like to do?
        </h1>
    </header>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        <div class="form-group @Html.Gds().FormGroupClass(m => m.SelectedValue)" id="options">
            @Html.WeeeGds().RadioButtonsFor(m => m.SelectedValue, Model.PossibleValues, "What would you like to do?", true)
        </div>

        <div class="form-group">
            <input type="submit" class="button" value="Continue" />
        </div>
    }
}


