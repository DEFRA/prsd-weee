@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.Helpers
@using EA.Weee.Web.RazorHelpers

@model EA.Weee.Web.Areas.Aatf.ViewModels.SelectYourAatfViewModel
@{
    var title = "Which site would you like to manage evidence notes for?";
    ViewBag.Title = title + " - GOV.UK";
}

<section id="main-content">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

            @Html.ActionLink("Back", "ChooseActivity", "Home", new { area = "Scheme", pcsId = Model.OrganisationId }, new { @class = "govuk-back-link weee-back-link" })

            @Html.Gds().ValidationSummary()

            <header class="hgroup">
                <h1 class="govuk-heading-l">
                    @title
                </h1>
            </header>
                <p class="govuk-body">
                    There are currently no sites available for you to manage evidence notes for. The site(s) you are looking for may not be approved for the current compliance year.
                </p>

                <p class="govuk-body">
                    Evidence notes for compliance years prior to 2023 are not stored in this service.
                </p>

                <p class="govuk-body">
                    Contact your environmental regulator if you believe this is incorrect.
                </p>
            </div>
    </div>
</section>

