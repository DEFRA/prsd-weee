@using EA.Weee.Core.DataStandards
@using EA.Weee.Web.Areas.Aatf.ViewModels
@using EA.Weee.Web.RazorHelpers
@model EA.Weee.Web.Areas.Aatf.ViewModels.ManageEvidenceNoteViewModel

@Html.Hidden("activeOverviewDisplayOption", ViewData["activeOverviewDisplayOption"])

    <div class="govuk-button-group govuk-!-padding-top-4 govuk-!-padding-left-1 govuk-!-padding-right-3  govuk-!-margin-left-1">

        @this.WeeeGds().Button("Filter", new { name = "ActionFilter", id = "filter-apply", @class = "govuk-!-width-one-quarter" },
    secondaryButton: false, filterButton: true)

        <div class="govuk-grid-column-one-half">
            @Html.ActionLink("Clear filter", "Index", "ManageEvidenceNotes",
            new { organisationId = Model.OrganisationId, aatfId = @Model.AatfId, activeOverviewDisplayOption = "ViewAllOtherEvidenceNotes" }, new { @class = "link-submit govuk-link govuk-link--no-visited-state" })
        </div>
    </div>
 
