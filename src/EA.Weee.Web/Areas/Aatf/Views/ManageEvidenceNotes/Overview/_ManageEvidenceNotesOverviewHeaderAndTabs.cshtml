@using EA.Weee.Web.RazorHelpers
@using MvcNavigationHelpers
@using EA.Weee.Web.Areas.Aatf.ViewModels
@using EA.Weee.Web.Areas.Aatf.Controllers

@model ManageManageEvidenceNoteOverviewViewModel
<ul class="govuk-tabs__list">
    @this.WeeeGds().Tab("Evidence summary",
        Url.UrlFor<ManageEvidenceNotesController>(a => a.Index(Model.ManageEvidenceNoteViewModel.OrganisationId, Model.ManageEvidenceNoteViewModel.AatfId, ManageEvidenceOverviewDisplayOption.EvidenceSummary, null)),
        Model.ActiveOverviewDisplayOption == ManageEvidenceOverviewDisplayOption.EvidenceSummary, "evidenceSummaryAnchor")
    @this.WeeeGds().Tab("Edit draft and returned notes",
        Url.UrlFor<ManageEvidenceNotesController>(a => a.Index(Model.ManageEvidenceNoteViewModel.OrganisationId, Model.ManageEvidenceNoteViewModel.AatfId, ManageEvidenceOverviewDisplayOption.EditDraftAndReturnedNotes, null)),
        Model.ActiveOverviewDisplayOption == ManageEvidenceOverviewDisplayOption.EditDraftAndReturnedNotes, "editDraftReturnedNotesAnchor")
    @this.WeeeGds().Tab("View all other evidence notes",
        Url.UrlFor<ManageEvidenceNotesController>(a => a.Index(Model.ManageEvidenceNoteViewModel.OrganisationId, Model.ManageEvidenceNoteViewModel.AatfId, ManageEvidenceOverviewDisplayOption.ViewAllOtherEvidenceNotes, null)),
        Model.ActiveOverviewDisplayOption == ManageEvidenceOverviewDisplayOption.ViewAllOtherEvidenceNotes, "viewAllOtherEvidenceNotesAnchor")
</ul>
