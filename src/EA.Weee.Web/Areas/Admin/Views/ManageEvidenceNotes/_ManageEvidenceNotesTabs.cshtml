
@using EA.Weee.Core.Helpers
@using EA.Weee.Web.Areas.Admin.ViewModels.ManageEvidenceNotes
@using EA.Weee.Web.RazorHelpers
@using EA.Weee.Web.Areas.Admin.ViewModels.Shared

@model ManageEvidenceNotesViewModel

<ul class="govuk-tabs__list govuk-!-padding-top-5" role="tablist">
    @this.WeeeGds().Tab("View all evidence notes",
        Url.Action("Index", "ManageEvidenceNotes",
            new { @tab = ManageEvidenceNotesTabDisplayOptions.ViewAllEvidenceNotes.ToDisplayString(), @selectedComplianceYear = Model.ManageEvidenceNoteViewModel.SelectedComplianceYear, @clickedTab = "viewAllEvidenceNotesAnchor" }),
        Model.ActiveDisplayOption == ManageEvidenceNotesTabDisplayOptions.ViewAllEvidenceNotes, "viewAllEvidenceNotesAnchor")

    @this.WeeeGds().Tab("View all evidence transfers",
        Url.Action("Index", "ManageEvidenceNotes",
            new { @tab = ManageEvidenceNotesTabDisplayOptions.ViewAllEvidenceTransfers.ToDisplayString(), @selectedComplianceYear = Model.ManageEvidenceNoteViewModel.SelectedComplianceYear, @clickedTab = "viewAllEvidenceTransfersAnchor" }),
        Model.ActiveDisplayOption == ManageEvidenceNotesTabDisplayOptions.ViewAllEvidenceTransfers, "viewAllEvidenceTransfersAnchor")
</ul>