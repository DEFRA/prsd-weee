@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@model EA.Weee.Web.Areas.Admin.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Edit User";
}

@section main_content {

    <header class="hgroup">
        <div>
            <h1 class="heading-large">Would you like to change the status, or manage the user’s details?</h1>
        </div>
    </header>

    @using (Html.BeginForm(actionName: "EditUser", controllerName: "User", method: FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        @Html.HiddenFor(m => m.Email)
        @Html.HiddenFor(m => m.OrganisationName)
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.UserId)
        @Html.HiddenFor(m => m.OrganisationId)
        @Html.HiddenFor(m => m.IsCompetentAuthorityUser)
        @Html.HiddenFor(m => m.CanManageStatus)

        <div class="form-group">
            <table title="This table contains the organisation user details.">
                <thead>
                    <tr>
                        <th>Company</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.OrganisationName</td>
                        <td><a href="mailto:@Html.DisplayFor(m => m.Email)" target="_top">@Html.DisplayFor(m => m.Email)</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group @Html.Gds().FormGroupClass(m => m.FirstName)">
            @Html.Gds().LabelFor(m => m.FirstName)
            @Html.Gds().ValidationMessageFor(m => m.FirstName)
            @Html.Gds().TextBoxFor(m => m.FirstName, new { @maxlength = "35" })
        </div>
        <div class="form-group @Html.Gds().FormGroupClass(m => m.LastName)">
            @Html.Gds().LabelFor(m => m.LastName)
            @Html.Gds().ValidationMessageFor(m => m.LastName)
            @Html.Gds().TextBoxFor(m => m.LastName, new { @maxlength = "35" })
        </div>

        if (Model.CanManageStatus)
        {
            <div class="form-group @Html.Gds().FormGroupClass(m => m.UserStatus)">
                @Html.Gds().LabelFor(m => m.UserStatus)
                @Html.Gds().ValidationMessageFor(m => m.UserStatus)
                @Html.Gds().DropDownListFor(m => m.UserStatus, Model.UserStatusSelectList, new { autocomplete = "false" })
            </div>
        }
        else
        {
            @Html.Gds().DropDownListFor(m => m.UserStatus, Model.UserStatusSelectList, new { hidden = "true" })
        }

        <div class="form-group">
            <button class="button" type="submit">Save and continue</button>
        </div>
        <p>
            <a href="javascript:history.back();">Back</a>
        </p>
    }
}
