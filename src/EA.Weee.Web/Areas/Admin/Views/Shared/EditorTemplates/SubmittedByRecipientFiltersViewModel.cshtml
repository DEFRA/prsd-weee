@model EA.Weee.Web.ViewModels.Shared.ManageEvidenceNoteViewModel

<div class="govuk-grid-column-one-half weee-evidence-padding-right" style="z-index: 5;">
    <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.RecipientWasteStatusFilterViewModel.SubmittedBy)">
        @Html.Gds().LabelFor(m => m.RecipientWasteStatusFilterViewModel.SubmittedBy, new { @class = "govuk-label--s" }, false)
        @Html.Gds().DropDownListFor(m => m.RecipientWasteStatusFilterViewModel.SubmittedBy, Model.RecipientWasteStatusFilterViewModel.SubmittedByList,
        string.Empty, new { @class = "use-overlay", Name= "SubmittedBy" }, useHalfWidth: false, withLookAhead: true)
    </div>
</div>
<div class="govuk-grid-column-one-half weee-evidence-padding-right" style="z-index: 4;">
    <div class="govuk-form-group @Html.Gds().FormGroupClass(m => m.RecipientWasteStatusFilterViewModel.ReceivedId)">
        @Html.Gds().LabelFor(m => m.RecipientWasteStatusFilterViewModel.ReceivedId, new { @class = "govuk-label--s" }, false)
        @Html.Gds().DropDownListFor(m => m.RecipientWasteStatusFilterViewModel.ReceivedId, Model.RecipientWasteStatusFilterViewModel.RecipientList,
            string.Empty, new { @class = "use-overlay", Name = "ReceivedId" }, useHalfWidth: false, withLookAhead: true)
    </div>
</div>

