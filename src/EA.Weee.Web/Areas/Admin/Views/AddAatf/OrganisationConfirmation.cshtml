@using System.Web.Mvc.Html
@using EA.Weee.Web.Areas.Admin.Controllers
@using EA.Weee.Web.Infrastructure
@using EA.Weee.Web.RazorHelpers
@using MvcNavigationHelpers
@model EA.Weee.Web.Areas.Admin.ViewModels.AddAatf.OrganisationConfirmationViewModel
@{
    ViewBag.Title = "Organisation created";
}

    <section id="main-content">
        <div>
            <h2 class="govuk-heading-m">You have successfully created @Model.OrganisationName and can now add an AATF.</h2>
        </div>
        <p>
            @Html.ActionLink("Continue", "Add", "AddAatf", new { organisationId = @Model.OrganisationId }, new { @class = "govuk-button" })
        </p>
    </section>