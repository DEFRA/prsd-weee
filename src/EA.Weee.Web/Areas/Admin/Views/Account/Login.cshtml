@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@model EA.Weee.Web.Areas.Admin.ViewModels.InternalLoginViewModel

@section main_content {
    <h1 class="heading-large">
        Sign in to your account
    </h1>

    @using (Html.BeginForm("Login", "Account"))
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        <div class="form-group @Html.Gds().FormGroupClass(m => m.Email)">
            @Html.Gds().LabelFor(m => m.Email)
            @Html.Gds().ValidationMessageFor(m => m.Email)
            @Html.Gds().TextBoxFor(m => m.Email)
        </div>
        <div class="form-group @Html.Gds().FormGroupClass(m => m.Password)">
            @Html.Gds().LabelFor(m => m.Password)
            @Html.Gds().ValidationMessageFor(m => m.Password)
            @Html.Gds().PasswordFor(m => m.Password)
        </div>

        <div class="form-group">
            <input type="submit" value="Continue" class="button" />
        </div>
        <p>@Html.ActionLink("Create a user account", "Create", "Account")</p>
        <p>@Html.ActionLink("Sign in as an external user", "Login", new { area = "", controller = "Account" })</p>
    }
}
