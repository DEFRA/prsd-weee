@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@using EA.Weee.Core.DataStandards
@using EA.Weee.Core.Organisations
@using EA.Weee.Web.Areas.Admin.Controllers
@using EA.Weee.Web.Areas.Admin.ViewModels.Scheme.Overview
@using MvcNavigationHelpers
@model EA.Weee.Web.Areas.Admin.ViewModels.Scheme.EditRegisteredCompanyOrganisationDetailsViewModel
@{
    ViewBag.Title = "Edit organisation details";
}

@section main_content {
    <header class="hgroup">
        <h1 class="heading-large">Edit organisation details</h1>
    </header>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        @Html.HiddenFor(m => m.OrgId)
        @Html.HiddenFor(m => m.SchemeId)
        @Html.HiddenFor(m => m.OrganisationType)

        <p>
            <span class="font-bold marginRight">Organisation type:</span> Registered company
        </p>
        
            <div class="form-group @Html.Gds().FormGroupClass(m => m.CompanyName)">
                @Html.Gds().LabelFor(m => m.CompanyName)
                @Html.Gds().ValidationMessageFor(m => m.CompanyName)
                @Html.Gds().TextBoxFor(m => m.CompanyName, new { @maxlength = CommonMaxFieldLengths.DefaultString })
            </div>

            <div class="form-group @Html.Gds().FormGroupClass(m => m.CompaniesRegistrationNumber)">
                @Html.Gds().LabelFor(m => m.CompaniesRegistrationNumber)
                @Html.Gds().ValidationMessageFor(m => m.CompaniesRegistrationNumber)
                @Html.Gds().TextBoxFor(m => m.CompaniesRegistrationNumber, new { @maxlength = EnvironmentAgencyMaxFieldLengths.CompanyRegistrationNumber })
            </div>
        
        <div class="form-group @Html.Gds().FormGroupClass(m => m.BusinessTradingName)">
            @Html.Gds().LabelFor(m => m.BusinessTradingName)
            @Html.Gds().TextBoxFor(m => m.BusinessTradingName, new { @maxlength = CommonMaxFieldLengths.DefaultString })
        </div>

        @Html.EditorFor(m => m.BusinesAddress)

        <div class="form-group">
            <button class="button">Save and Continue</button>
        </div>
        <p>
            <a href="javascript:history.back();">Back</a>
        </p>
    }

}
