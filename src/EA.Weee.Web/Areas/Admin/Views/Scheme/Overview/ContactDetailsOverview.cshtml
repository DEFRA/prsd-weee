@using EA.Weee.Web.Areas.Admin.Controllers
@using MvcNavigationHelpers
@model EA.Weee.Web.Areas.Admin.ViewModels.Scheme.Overview.ContactDetails.ContactDetailsOverviewViewModel

@section full_main_content{

    <div class="govuk-!-padding-bottom-8"></div>
    <div class="govuk-tabs">
        @Html.Partial("Overview/_OverviewHeaderAndTabs", Model)

        <div class="govuk-tabs__panel" id="contactDetails">
            <h1 class="sr-only" tabindex="0">tab 4 content Contact details</h1>
            <header>
                <h1 class="govuk-heading-l" aria-hidden="true" style="margin-top: 10px">
                    Contact details
                </h1>
            </header>
            <table id="pcs-details-table" class="govuk-table">                
                <tbody class="govuk-table__body">
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="row">Name</th>
                        <td class="govuk-table__cell">@(Model.Contact.FirstName + " " + Model.Contact.LastName)</td>
                    </tr>
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="row">Position</th>
                        <td class="govuk-table__cell">@Model.Contact.Position</td>
                    </tr>
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="row">Address</th>
                        <td class="govuk-table__cell">
                            <span class="prsd-long-address">
                                <span>@Model.Address.Address.Address1</span>
                                <span>@Model.Address.Address.Address2</span>
                                <span>@Model.Address.Address.TownOrCity</span>
                                <span>@Model.Address.Address.CountyOrRegion</span>
                                <span>@Model.Address.Address.Postcode</span>
                                <span>@Model.Address.Address.CountryName</span>
                            </span>
                        </td>
                    </tr>
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="row">Telephone</th>
                        <td class="govuk-table__cell">@Model.Address.Address.Telephone</td>
                    </tr>
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="row">Email</th>
                        <td class="govuk-table__cell">@Model.Address.Address.Email</td>
                    </tr>
                </tbody>
            </table>

            <br />
            @if (Model.CanEditContactDetails)
            {
                <p>
                    <a href="@(Url.UrlFor<SchemeController>(a => a.ManageContactDetails(Model.SchemeId, Model.Contact.OrganisationId)))">Edit contact details</a>
                </p>
            }
        </div>
        @Html.Partial("Overview/_OverviewAvailableActions")
    </div>
}
@section scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            initialiseTabs();
        });
    </script>
}