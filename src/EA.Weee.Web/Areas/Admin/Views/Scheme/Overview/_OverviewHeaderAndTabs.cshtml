@using EA.Weee.Web.Areas.Admin.Controllers
@using EA.Weee.Web.Areas.Admin.ViewModels.Scheme.Overview
@using EA.Weee.Web.RazorHelpers
@using MvcNavigationHelpers

@model OverviewViewModel
<header class="hgroup">
    <h1 class="govuk-heading-xl">@Model.SchemeName</h1>
</header>

<ul class="govuk-tabs__list" role="tablist">
    @this.WeeeGds().Tab("PCS details",
        Url.UrlFor<SchemeController>(a => a.Overview(Model.SchemeId, OverviewDisplayOption.PcsDetails, "pcsDetailsAnchor")),
        Model.ActiveOverviewDisplayOption == OverviewDisplayOption.PcsDetails, "pcsDetailsAnchor")
    @this.WeeeGds().Tab("Members and data",
        Url.UrlFor<SchemeController>(a => a.Overview(Model.SchemeId, OverviewDisplayOption.MembersData, "memberDetailsAnchor")),
        Model.ActiveOverviewDisplayOption == OverviewDisplayOption.MembersData, "memberDetailsAnchor")
    @this.WeeeGds().Tab("Organisation details",
        Url.UrlFor<SchemeController>(a => a.Overview(Model.SchemeId, OverviewDisplayOption.OrganisationDetails, "organisationDetailsAnchor")),
        Model.ActiveOverviewDisplayOption == OverviewDisplayOption.OrganisationDetails, "organisationDetailsAnchor")
    @this.WeeeGds().Tab("Contact details",
        Url.UrlFor<SchemeController>(a => a.Overview(Model.SchemeId, OverviewDisplayOption.ContactDetails, "contactDetailsAnchor")),
        Model.ActiveOverviewDisplayOption == OverviewDisplayOption.ContactDetails, "contactDetailsAnchor")
</ul>


