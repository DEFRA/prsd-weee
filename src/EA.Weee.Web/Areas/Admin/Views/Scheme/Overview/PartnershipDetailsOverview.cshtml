@using MvcNavigationHelpers
@using EA.Weee.Web.Areas.Admin.Controllers
@model EA.Weee.Web.Areas.Admin.ViewModels.Scheme.Overview.OrganisationDetails.PartnershipDetailsOverviewViewModel
<div class="govuk-!-padding-bottom-8"></div>
@Html.Partial("Overview/_OverviewHeaderAndTabs", Model)

@section main_content {
    <table id="pcs-details-table" class="govuk-table">
        <thead class="govuk-table__head">
            <tr class="govuk-visually-hidden">
                <th colspan="2">Organisation details</th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            <tr class="govuk-table__row">
                <th class="govuk-table__header" scope="col">Organisation type</th>
                <td class="govuk-table__cell">Partnership</td>
            </tr>
            <tr class="govuk-table__row">
                <th class="govuk-table__header" scope="col">Business trading name</th>
                <td class="govuk-table__cell">@Model.BusinessTradingName</td>
            </tr>
            <tr class="govuk-table__row">
                <th class="govuk-table__header" scope="col">Address</th>
                <td class="govuk-table__cell">
                    @Model.Address.Address.Address1<br />
                    @Model.Address.Address.Address2<br />
                    @Model.Address.Address.TownOrCity<br />
                    @Model.Address.Address.CountyOrRegion<br />
                    @Model.Address.Address.Postcode<br />
                    @Model.Address.Address.CountryName<br />
                </td>
            </tr>
            <tr class="govuk-table__row">
                <th class="govuk-table__header" scope="col">Telephone</th>
                <td class="govuk-table__cell">@Model.Address.Address.Telephone</td>
            </tr>
            <tr class="govuk-table__row">
                <th class="govuk-table__header" scope="col">Email address</th>
                <td class="govuk-table__cell">@Model.Address.Address.Email</td>
            </tr>
        </tbody>
    </table>
    
    @if (Model.CanEditOrganisation)
    {
        <br />
        <p>
            <a href="@(Url.UrlFor<SchemeController>(a => a.EditSoleTraderOrIndividualOrganisationDetails(Model.SchemeId, Model.Address.OrganisationId)))">Edit organisation details</a>
        </p>
    }

    @Html.Partial("Overview/_OverviewAvailableActions")
}

