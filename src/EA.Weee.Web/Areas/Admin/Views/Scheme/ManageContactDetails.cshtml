@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@model EA.Weee.Web.Areas.Admin.ViewModels.Scheme.ManageContactDetailsViewModel

@{
    ViewBag.Title = "Edit organisation contact details";
}

<header class="hgroup">
    <h1 class="heading-large">Edit organisation contact details</h1>
</header>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Gds().ValidationSummary()

    @Html.HiddenFor(m => m.OrganisationData.Id)
    @Html.HiddenFor(m => m.SchemeId)

    @Html.HiddenFor(m => m.OrganisationData.Contact.RowVersion)

    <div class="form-group @Html.Gds().FormGroupClass(m => m.OrganisationData.Contact.FirstName)">
        @Html.Gds().ValidationMessageFor(m => m.OrganisationData.Contact.FirstName)
        @Html.Gds().LabelFor(m => m.OrganisationData.Contact.FirstName)
        @Html.Gds().TextBoxFor(m => m.OrganisationData.Contact.FirstName, new { @maxlength = "35" })
    </div>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.OrganisationData.Contact.LastName)">
        @Html.Gds().ValidationMessageFor(m => m.OrganisationData.Contact.LastName)
        @Html.Gds().LabelFor(m => m.OrganisationData.Contact.LastName)
        @Html.Gds().TextBoxFor(m => m.OrganisationData.Contact.LastName, new { @maxlength = "35" })
    </div>

    <div class="form-group @Html.Gds().FormGroupClass(m => m.OrganisationData.Contact.Position)">
        @Html.Gds().ValidationMessageFor(m => m.OrganisationData.Contact.Position)
        @Html.Gds().LabelFor(m => m.OrganisationData.Contact.Position)
        @Html.Gds().TextBoxFor(m => m.OrganisationData.Contact.Position, new { @maxlength = "35" })
    </div>

    @Html.EditorFor(m => m.OrganisationData.OrganisationAddress)

    <div class="form-group">
        <button class="button">Save and Continue</button>
    </div>
}

