@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@model EA.Weee.Web.Areas.Admin.ViewModels.Scheme.ConfirmRejectionViewModel
@{
    ViewBag.Title = "Confirm Rejection";
}

@section main_content {
    <header class="hgroup">
        <div>
            <h1 class="heading-large">Are you sure you want to reject this PCS?</h1>
        </div>
    </header>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Gds().ValidationSummary()

        <div class="form-group">
            <p>Please note that this change, once saved, cannot be undone.</p>
        </div>

        <div class="form-group @Html.Gds().FormGroupClass(m => m.ConfirmRejectionOptions.SelectedValue)" id="ConfirmRejectionOptions">
            @Html.EditorFor(m => m.ConfirmRejectionOptions)
        </div>

        <div class="form-group">
            <input type="submit" class="button" value="Continue" />
        </div>
    }
}
