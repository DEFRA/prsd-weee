@using EA.Prsd.Core.Web.Mvc.RazorHelpers
@model EA.Weee.Web.Areas.Admin.ViewModels.Home.InternalUserActivityViewModel
@{
    ViewBag.Title = "Choose Activity";
}

@section main_content
{
    <header class="hgroup">
        <h1 class="heading-large">
            What activity would you like to do?
        </h1>
    </header>

    @using (Html.BeginForm(actionName: "ChooseActivity", controllerName: "Home", method: FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group @Html.Gds().FormGroupClass(m => m.InternalUserActivityOptions.SelectedValue)" id="InternalUserActivityOptions">
            @Html.EditorFor(m => m.InternalUserActivityOptions)
        </div>

        <div class="form-group">
            <input type="submit" class="button" value="Continue" />
        </div>
    }
}

