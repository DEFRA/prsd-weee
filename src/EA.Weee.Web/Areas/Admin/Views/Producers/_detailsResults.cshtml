                <a href="#" id="@(scheme.ObligationType)-contact-details-tab">Contact details</a>
            </li>

            <li>
                <a href="#" id="@(scheme.ObligationType)-total-eee-details-tab">Total EEE</a>
            </li>

            @if (scheme.ProducerEeeDetails.Q1EEE.Any())
