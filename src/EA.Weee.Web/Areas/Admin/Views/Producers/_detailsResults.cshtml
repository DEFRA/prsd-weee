            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Registered PCS</th>
                <td>
                    @scheme.SchemeName
                    @if (Model.CanRemoveProducer)
                    {
                        <br />@Html.ActionLink("Remove producer", "ConfirmRemoval", "Producers", new { registeredProducerId = @scheme.RegisteredProducerId }, null)
                    }
                </td>
            </tr>
            <tr>
                <th>Producer name</th>
                <td>@scheme.ProducerName</td>
            </tr>
            <tr>
                <th>Trading name</th>
                <td>@scheme.TradingName</td>
            </tr>
            <tr>
                <th>Registration date</th>
                <td>@scheme.RegistrationDate.ToString("dd MMMM yyyy")</td>
            </tr>
