<script type="text/javascript">
    $("a[id$='details-tab']").click(function (event) {
        event.preventDefault();

        var schemeIdentifier = $(this).attr('id')
            .replace('registration', '')
            .replace('contact', '')
            .replace('total-eee', '')
            .replace('q1', '')
            .replace('q2', '')
            .replace('q3', '')
            .replace('q4', '')
            .replace('-details-tab', '');

        // Inactivate scheme tags
        $("a[id$='details-tab']").each(function () {
            if ($(this).attr('id').indexOf(schemeIdentifier) !== -1) {
                $(this).parent().removeClass();
            }
        });

        // Except this tab
        $(this).parent().addClass("active");

        var tableIdentifier = $(this).attr('id').replace('details-tab', '');

        // Hide all data tables in scheme
        $("table[id$='details-table']").each(function () {
            if ($(this).attr('id').indexOf(schemeIdentifier) !== -1) {
                $(this).addClass('visually-hidden');
            }
        });

        // Except for the table corresponding to this tab
        $("table[id$='" + tableIdentifier + "details-table']").removeClass('visually-hidden');
    })
</script>