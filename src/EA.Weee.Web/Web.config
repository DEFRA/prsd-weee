  <appSettings>
    <!-- *************** -->
    <!-- Elmah settings. -->
    <!-- *************** -->
    <add key="elmah.mvc.disableHandler" value="false" />
    <add key="elmah.mvc.disableHandleErrorFilter" value="false" />
    <add key="elmah.mvc.requiresAuthentication" value="false" />
    <add key="elmah.mvc.IgnoreDefaultRoute" value="false" />
    <add key="elmah.mvc.allowedRoles" value="*" />
    <add key="elmah.mvc.allowedUsers" value="*" />
    <add key="elmah.mvc.route" value="elmah" />
    <add key="elmah.mvc.UserAuthCaseSensitive" value="true" />
    <!-- ******************** -->
    <!-- ENVIRONMENT SPECIFIC -->
    <!-- ******************** -->
    <add key="Weee.ApiUrl" value="https://localhost:44502" />
    <add key="Weee.ApiSecret" value="***REMOVED***" />
    <add key="Weee.ApiClientId" value="weee" />
    <add key="Weee.MailFrom" value="noreply@weee.gov.uk" />
    <add key="Weee.SendEmail" value="true" />
    <add key="Weee.TruncateEmailAfterPlus" value="true" />
    <add key="Weee.EnableTestArea" value="true" />
  </appSettings>
  <elmah>
    <errorLog type="Elmah.XmlFileErrorLog, Elmah" logPath="~/App_Data" />
  </elmah>
  <!--
  Email whitelists or blacklists an be added by adding configuration in the following format
  <emailRules defaultAction="Deny">
    <add action="Allow" type="EmailAddress" value="test.user1@some.domain.com" />
    <add action="Allow" type="EmailAddress" value="another.test.user@another.domain.co.uk" />
    <add action="Allow" type="RegEx" value="^.*@sfwltd\.co\.uk$" />
  </emailRules>
  -->
  <emailRules defaultAction="Deny" />
  <internalEmailRules defaultAction="Deny">
	<add action="Allow" type="RegEx" value="^.*@environment-agency\.gov\.uk$" />		
	<add action="Allow" type="RegEx" value="^.*@cyfoethnaturiolcymru\.gov\.uk$" />		
	<add action="Allow" type="RegEx" value="^.*@naturalresourceswales\.gov\.uk$" />		
	<add action="Allow" type="RegEx" value="^.*@sepa\.org\.uk$" />		
	<add action="Allow" type="RegEx" value="^.*@doeni\.gov\.uk$" />		
  </internalEmailRules>
  <internalConfiguration>
	  <allowedEmailSuffixes>
		  <add value="@environment-agency.gov.uk"/>
		  <add value="@environment-agency.gov.uk"/>
		  <add value="@cyfoethnaturiolcymru.gov.uk"/>
		  <add value="@naturalresourceswales.gov.uk"/>
		  <add value="@sepa.org.uk"/>
		  <add value="@doeni.gov.uk"/>
	  </allowedEmailSuffixes>
  </internalConfiguration>
  <system.net>
    <mailSettings>
      <smtp deliveryMethod="SpecifiedPickupDirectory">
        <specifiedPickupDirectory pickupDirectoryLocation="c:\AppData\" />
        <network host="localhost" port="25" />
      </smtp>
    </mailSettings>
  </system.net>
